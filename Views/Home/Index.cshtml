@model UPVC.ViewModels.HomeViewModel
@using System.Globalization
@{
    ViewData["Title"] = Model.CompanyInfo?.NameEn ?? "EMAPEN - uPVC Systems";
    Layout = "_Layout";
    
    // Get current language from cookie or default to English
    var isArabic = CultureInfo.CurrentCulture.Name.StartsWith("ar");
    
    // Get page content based on language
    var title = isArabic ? Model.HomePage?.TitleAr : Model.HomePage?.TitleEn;
    var subtitle = isArabic ? Model.HomePage?.SubtitleAr : Model.HomePage?.SubtitleEn;
    var content = isArabic ? Model.HomePage?.ContentAr : Model.HomePage?.ContentEn;
    
    // Company info
    var companyName = isArabic ? Model.CompanyInfo?.NameAr : Model.CompanyInfo?.NameEn;
    var companyPhone = Model.CompanyInfo?.Phone ?? "15726";
}

@section Styles {
    <link rel="stylesheet" href="~/css/style.css" />
}

<!-- ===== HERO SECTION ===== -->
<section class="hero-section home1">
    <div class="container">
        <div class="vertical-dots white-dots">
            <a asp-controller="Home" asp-action="Index" class="dot active"></a>
            <a asp-controller="Home" asp-action="Home2" class="dot"></a>
            <a asp-controller="Home" asp-action="Home3" class="dot"></a>
            <a asp-controller="Home" asp-action="Home4" class="dot"></a>
        </div>
        <div class="hero-content">
            <div class="hero-header">
                <h1 class="hero-title">
                    @title
                </h1>

                <a asp-controller="Product" asp-action="Index" class="btn btn-outline-light">
                    @subtitle

                    <svg width="16" height="16" viewBox="0 0 25 25" fill="none" xmlns="http://www.w3.org/2000/svg"
                        xmlns:xlink="http://www.w3.org/1999/xlink">
                        <rect x="0.196045" y="0.581543" width="24" height="24" fill="url(#pattern0_4_869)" />
                        <defs>
                            <pattern id="pattern0_4_869" patternContentUnits="objectBoundingBox" width="1"
                                height="1">
                                <use xlink:href="#image0_4_869" transform="scale(0.0416667)" />
                            </pattern>
                            <image id="image0_4_869" width="24" height="24" preserveAspectRatio="none"
                                xlink:href="data:image/png;base64," />
                        </defs>
                    </svg>
                </a>
            </div>

            <div class="hero-body">
                <p class="hero-description">
                   @content
                </p>

                <div class="hero-footer green-footer">
                    <div class="certifications-container">
                        <div class="certifications">
                            <img src="~/images/home/20year.png" alt="20 Years" height="50" loading="lazy" />
                            <img src="~/images/home/iso.png" alt="ISO" height="50" loading="lazy" />
                            <img src="~/images/home/nr.png" alt="NR" height="50" loading="lazy" />
                            <img src="~/images/home/eos.png" alt="EOS" height="50" loading="lazy" />
                        </div>
                        <div class="hotline">
                            <span class="hotline-number">@companyPhone</span>
                            <p>@(isArabic ? "الخط الساخن" : "Hotline")</p>
                        </div>
                    </div>
                    <p>
                        &copy;
                        <script>
                            document.write(new Date().getFullYear());
                        </script>
                        @if (ViewBag.CompanyInfo != null)
                        {
                            @(isArabic ? ViewBag.CompanyInfo.CopyrightTextAr ?? "إيمابن جميع الحقوق محفوظة" : ViewBag.CompanyInfo.CopyrightTextEn ?? "EMAPEN all rights reserved")
                        }
                        else
                        {
                            @companyName @(isArabic ? "جميع الحقوق محفوظة" : "all rights reserved")
                        }
                    </p>
                </div>
            </div>
        </div>
        <div class="hero-arrow">
            <button type="button" class="btn btn-link" onclick="window.location.href='@Url.Action("Home2", "Home")'">
                <svg width="108" height="68" viewBox="0 0 108 68" fill="none" xmlns="http://www.w3.org/2000/svg">
                    <path d="M0 12.735L12.7305 0L54.018 42.0255L95.2695 0L108 12.735L54.018 67.5L0 12.735Z"
                        fill="#75C059" fill-opacity="0.3" />
                </svg>
            </button>
        </div>
    </div>
</section>
<script src="~/js/lang.js"></script>
<script src="~/js/home-slider.js"></script>
