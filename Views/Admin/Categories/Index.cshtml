@model IEnumerable<UPVC.Models.Category>
@{
    ViewData["Title"] = "إدارة فئات التواصل";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-tags me-2"></i>إدارة فئات التواصل</h2>
        <p class="text-muted">تعديل أسماء الفئات في نموذج الاتصال</p>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title">
                            <i class="bi bi-tag-fill me-2 text-primary"></i>
                            فئة #@category.Id
                        </h5>
                        <span class="badge @(category.IsActive ? "bg-success" : "bg-secondary")">
                            <i class="bi bi-@(category.IsActive ? "check-circle" : "x-circle") me-1"></i>
                            @(category.IsActive ? "نشط" : "غير نشط")
                        </span>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="text-primary"><i class="bi bi-translate me-2"></i>الاسم بالعربي</h6>
                        <p class="mb-0 fw-bold">@category.NameAr</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="text-primary"><i class="bi bi-globe me-2"></i>الاسم بالإنجليزي</h6>
                        <p class="mb-0 fw-bold">@category.NameEn</p>
                    </div>

                    <div class="text-end mt-3">
                        <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>تعديل
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@if (!Model.Any())
{
    <div class="card shadow-sm">
        <div class="card-body text-center py-5">
            <i class="bi bi-tags display-1 text-muted"></i>
            <p class="mt-3 text-muted">لا توجد فئات</p>
        </div>
    </div>
}
