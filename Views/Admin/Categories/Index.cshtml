@model IEnumerable<UPVC.Models.Category>
@{
    ViewData["Title"] = "إدارة فئات التواصل";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Success Alert -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Info Banner -->
<div class="row mb-2">
    <div class="col-12">
        <div class="info-box bg-gradient-info" style="min-height: 80px;">
            <span class="info-box-icon" style="width: 70px; height: 80px; line-height: 80px;">
                <i class="fas fa-tags" style="font-size: 1.8rem;"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text" style="font-size: 0.95rem;">إجمالي الفئات</span>
                <span class="info-box-number" style="font-size: 1.3rem;">@Model.Count() فئة</span>
                <span class="progress-description" style="font-size: 0.85rem;">
                    يتم استخدام هذه الفئات في نموذج الاتصال بالموقع
                </span>
            </div>
        </div>
    </div>
</div>

<!-- Categories Cards Grid -->
<div class="row">
    @foreach (var category in Model)
    {
        <div class="col-lg-6 col-md-12 mb-2">
            <div class="card card-primary card-outline" style="margin-bottom: 0.5rem;">
                <div class="card-header" style="padding: 0.5rem 0.75rem;">
                    <h3 class="card-title" style="font-size: 1rem;">
                        <i class="fas fa-tag"></i> فئة #@category.Id
                    </h3>
                    <div class="card-tools" style="float: left; direction: ltr;">
                        @if (category.IsActive)
                        {
                            <span class="badge badge-success" style="font-size: 0.8rem;">
                                <i class="fas fa-check-circle"></i> نشط
                            </span>
                        }
                        else
                        {
                            <span class="badge badge-secondary" style="font-size: 0.8rem;">
                                <i class="fas fa-times-circle"></i> غير نشط
                            </span>
                        }
                    </div>
                </div>
                <div class="card-body" style="padding: 0.75rem;">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="info-box bg-success" style="min-height: 70px;">
                                <span class="info-box-icon" style="width: 60px; height: 70px; line-height: 70px;">
                                    <i class="fas fa-language" style="font-size: 1.5rem;"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text" style="font-size: 0.85rem;">الاسم بالعربي</span>
                                    <span class="info-box-number" style="font-size: 0.95rem;">@category.NameAr</span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="info-box bg-info" style="min-height: 70px;">
                                <span class="info-box-icon" style="width: 60px; height: 70px; line-height: 70px;">
                                    <i class="fas fa-globe" style="font-size: 1.5rem;"></i>
                                </span>
                                <div class="info-box-content">
                                    <span class="info-box-text" style="font-size: 0.85rem;">English Name</span>
                                    <span class="info-box-number" style="font-size: 0.95rem;">@category.NameEn</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer" style="padding: 0.5rem 0.75rem;">
                    <a asp-action="Edit" asp-route-id="@category.Id" class="btn btn-primary btn-sm">
                        <i class="fas fa-edit"></i> تعديل الفئة
                    </a>
                </div>
            </div>
        </div>
    }
</div>

<!-- Empty State -->
@if (!Model.Any())
{
    <div class="card card-warning card-outline">
        <div class="card-body text-center py-5">
            <div class="mb-4">
                <i class="fas fa-tags fa-5x text-muted"></i>
            </div>
            <h4 class="text-muted">لا توجد فئات</h4>
            <p class="text-muted">لم يتم العثور على أي فئات في النظام</p>
        </div>
    </div>
}

