@model IEnumerable<UPVC.Models.Category>
@{
    ViewData["Title"] = "إدارة فئات التواصل";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <!-- Success Alert -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-tags"></i> قائمة الفئات
                        </h3>
                    </div>
                    <div class="col-auto">
                        <span class="badge badge-info">@Model.Count() فئة</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 60px">#</th>
                            <th>الاسم بالعربي</th>
                            <th>English Name</th>
                            <th style="width: 100px">الحالة</th>
                            <th style="width: 120px">الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Any())
                        {
                            @foreach (var category in Model)
                            {
                                <tr>
                                    <td class="font-weight-bold">@category.Id</td>
                                    <td>
                                        <i class="fas fa-language text-success"></i> 
                                        <strong>@category.NameAr</strong>
                                    </td>
                                    <td>
                                        <i class="fas fa-globe text-info"></i> 
                                        @category.NameEn
                                    </td>
                                    <td>
                                        @if (category.IsActive)
                                        {
                                            <span class="badge badge-success">
                                                <i class="fas fa-check-circle"></i> نشط
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">
                                                <i class="fas fa-times-circle"></i> غير نشط
                                            </span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Edit" asp-route-id="@category.Id" 
                                           class="btn btn-sm btn-primary" 
                                           title="تعديل">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="5" class="text-center text-muted py-4">
                                    <i class="fas fa-tags fa-3x mb-3 d-block"></i>
                                    <p class="mb-0">لا توجد فئات في النظام</p>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</section>
