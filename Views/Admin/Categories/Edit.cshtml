@model UPVC.Models.Category
@{
    ViewData["Title"] = "تعديل الفئة";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-pencil-square me-2"></i>تعديل الفئة</h2>
        <p class="text-muted">تحديث اسم الفئة بالعربي والإنجليزي</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-right me-2"></i>رجوع للقائمة
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            
            <div class="row">
                <div class="col-md-6">
                    <div class="mb-4">
                        <label asp-for="NameAr" class="form-label fw-bold">
                            <i class="bi bi-translate me-2"></i>اسم الفئة (عربي) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="NameAr" class="form-control form-control-lg" placeholder="أدخل اسم الفئة بالعربي" required />
                        <span asp-validation-for="NameAr" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">مثال: صاحب منزل، مهندس معماري، مورد</small>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="mb-4">
                        <label asp-for="NameEn" class="form-label fw-bold">
                            <i class="bi bi-globe me-2"></i>اسم الفئة (English) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="NameEn" class="form-control form-control-lg" placeholder="Enter category name in English" required />
                        <span asp-validation-for="NameEn" class="text-danger"></span>
                        <small class="text-muted d-block mt-2">Example: Home owner, Architect, Supplier</small>
                    </div>
                </div>
            </div>

            <div class="alert alert-info">
                <i class="bi bi-info-circle me-2"></i>
                <strong>ملاحظة:</strong> سيتم عرض هذه الفئة في القائمة المنسدلة لنموذج الاتصال في الموقع.
            </div>

            <div class="d-flex gap-2 mt-4">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-save me-2"></i>حفظ التغييرات
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-x-circle me-2"></i>إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
