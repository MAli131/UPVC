@model IEnumerable<UPVC.Models.AboutPage>
@{
    ViewData["Title"] = "إدارة صفحات من نحن";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Success Alert -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Info Box -->
<div class="row mb-2">
    <div class="col-12">
        <div class="info-box bg-gradient-info" style="min-height: 70px;">
            <span class="info-box-icon" style="width: 60px; height: 70px; line-height: 70px;">
                <i class="fas fa-info-circle" style="font-size: 1.5rem;"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text" style="font-size: 0.9rem;">إدارة صفحات من نحن</span>
                <span class="info-box-number" style="font-size: 1.1rem;">@Model.Count() صفحة</span>
            </div>
        </div>
    </div>
</div>

<!-- Pages Grid -->
<div class="row">
    @if (Model.Any())
    {
        @foreach (var aboutPage in Model)
        {
            <div class="col-lg-12 col-md-12 mb-2">
                <div class="card card-info card-outline" style="margin-bottom: 0.5rem;">
                    <div class="card-header" style="padding: 0.5rem 0.75rem;">
                        <h3 class="card-title" style="font-size: 1rem;">
                            <i class="fas fa-file-alt"></i> صفحة @aboutPage.PageKey
                        </h3>
                        <div class="card-tools" style="float: left; direction: ltr;">
                            @if (aboutPage.IsActive)
                            {
                                <span class="badge badge-success" style="font-size: 0.8rem;">
                                    <i class="fas fa-check-circle"></i> نشط
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-secondary" style="font-size: 0.8rem;">
                                    <i class="fas fa-times-circle"></i> غير نشط
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-body" style="padding: 0.75rem;">
                        <div class="row">
                            <div class="col-md-6">
                                <div class="info-box bg-success" style="min-height: 70px;">
                                    <span class="info-box-icon" style="width: 60px; height: 70px; line-height: 70px;">
                                        <i class="fas fa-language" style="font-size: 1.5rem;"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text" style="font-size: 0.85rem;">العنوان بالعربي</span>
                                        <span class="info-box-number" style="font-size: 0.95rem;">@aboutPage.TitleAr</span>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="info-box bg-primary" style="min-height: 70px;">
                                    <span class="info-box-icon" style="width: 60px; height: 70px; line-height: 70px;">
                                        <i class="fas fa-globe" style="font-size: 1.5rem;"></i>
                                    </span>
                                    <div class="info-box-content">
                                        <span class="info-box-text" style="font-size: 0.85rem;">English Title</span>
                                        <span class="info-box-number" style="font-size: 0.95rem;">@aboutPage.TitleEn</span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        
                        @if (aboutPage.Sections.Any())
                        {
                            <div class="mt-2">
                                <small class="text-muted">
                                    <i class="fas fa-list"></i> الأقسام: @aboutPage.Sections.Count
                                </small>
                            </div>
                        }
                    </div>
                    <div class="card-footer" style="padding: 0.5rem 0.75rem;">
                        <a asp-action="Edit" asp-route-id="@aboutPage.Id" class="btn btn-primary btn-sm">
                            <i class="fas fa-edit"></i> تعديل الصفحة
                        </a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card card-secondary card-outline">
                <div class="card-body text-center" style="padding: 2rem;">
                    <i class="fas fa-inbox fa-3x text-muted mb-3"></i>
                    <p class="text-muted">لا توجد صفحات متاحة</p>
                </div>
            </div>
        </div>
    }
</div>
