@{
    ViewData["Title"] = "لوحة التحكم الرئيسية";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Statistics Cards -->
<div class="row mb-2">
    <div class="col-lg-4 col-6 mb-2">
        <div class="small-box bg-primary">
            <div class="inner" style="padding: 0.75rem;">
                <h3 style="font-size: 1.5rem;">@ViewBag.TotalProducts</h3>
                <p style="font-size: 0.9rem; margin-bottom: 0;">إجمالي المنتجات</p>
            </div>
            <div class="icon" style="font-size: 3rem; top: 5px; right: 10px;">
                <i class="fas fa-box"></i>
            </div>
            <a asp-controller="Products" asp-action="Index" class="small-box-footer" style="padding: 0.4rem;">
                عرض المزيد <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-4 col-6 mb-2">
        <div class="small-box bg-success">
            <div class="inner" style="padding: 0.75rem;">
                <h3 style="font-size: 1.5rem;">@ViewBag.ActiveProducts</h3>
                <p style="font-size: 0.9rem; margin-bottom: 0;">المنتجات النشطة</p>
            </div>
            <div class="icon" style="font-size: 3rem; top: 5px; right: 10px;">
                <i class="fas fa-check-circle"></i>
            </div>
            <a asp-controller="Products" asp-action="Index" class="small-box-footer" style="padding: 0.4rem;">
                عرض المزيد <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-4 col-6 mb-2">
        <div class="small-box bg-info">
            <div class="inner" style="padding: 0.75rem;">
                <h3 style="font-size: 1.5rem;">@ViewBag.TotalHomePages</h3>
                <p style="font-size: 0.9rem; margin-bottom: 0;">صفحات الرئيسية</p>
            </div>
            <div class="icon" style="font-size: 3rem; top: 5px; right: 10px;">
                <i class="fas fa-home"></i>
            </div>
            <a asp-controller="HomePages" asp-action="Index" class="small-box-footer" style="padding: 0.4rem;">
                عرض المزيد <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header" style="padding: 0.5rem 0.75rem;">
                <h3 class="card-title" style="font-size: 1rem;">
                    <i class="fas fa-bolt"></i> إجراءات سريعة
                </h3>
            </div>
            <div class="card-body" style="padding: 0.75rem;">
                <div class="row">
                    <div class="col-lg-2 col-md-4 col-6 mb-2">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-block">
                            <i class="fas fa-boxes"></i>
                            عرض المنتجات
                        </a>
                    </div>
                    <div class="col-lg-2 col-md-4 col-6 mb-2">
                        <a asp-controller="HomePages" asp-action="Index" class="btn btn-info btn-block">
                            <i class="fas fa-edit"></i>
                            تعديل الصفحات
                        </a>
                    </div>
                    <div class="col-lg-2 col-md-4 col-6 mb-2">
                        <a asp-controller="CompanyInfo" asp-action="Edit" class="btn btn-secondary btn-block">
                            <i class="fas fa-building"></i>
                            بيانات الشركة
                        </a>
                    </div>
                    <div class="col-lg-2 col-md-4 col-6 mb-2">
                        <a asp-controller="SocialMedia" asp-action="Index" class="btn btn-success btn-block">
                            <i class="fas fa-share-alt"></i>
                            حسابات التواصل
                        </a>
                    </div>
                    <div class="col-lg-2 col-md-4 col-6 mb-2">
                        <a asp-controller="ContactPage" asp-action="Edit" class="btn btn-warning btn-block">
                            <i class="fas fa-envelope"></i>
                            صفحة اتصل بنا
                        </a>
                    </div>
                    <div class="col-lg-2 col-md-4 col-6 mb-2">
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-danger btn-block">
                            <i class="fas fa-tags"></i>
                            فئات التواصل
                        </a>
                    </div>
                    <div class="col-lg-2 col-md-4 col-6 mb-2">
                        <a asp-controller="AboutPages" asp-action="Index" class="btn btn-block" style="background-color: #6f42c1; color: white; border-color: #6f42c1;">
                            <i class="fas fa-info-circle"></i>
                            صفحات من نحن
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
