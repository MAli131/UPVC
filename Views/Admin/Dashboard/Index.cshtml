@{
    ViewData["Title"] = "لوحة التحكم الرئيسية";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Statistics Cards -->
<div class="row">
    <div class="col-lg-3 col-md-6 col-12 mb-3">
        <div class="info-box bg-primary">
            <span class="info-box-icon">
                <i class="fas fa-box"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">إجمالي المنتجات</span>
                <span class="info-box-number">@ViewBag.TotalProducts</span>
            </div>
            <a asp-controller="Products" asp-action="Index" class="small-box-footer">
                المزيد <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 col-12 mb-3">
        <div class="info-box bg-success">
            <span class="info-box-icon">
                <i class="fas fa-check-circle"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">المنتجات النشطة</span>
                <span class="info-box-number">@ViewBag.ActiveProducts</span>
            </div>
            <a asp-controller="Products" asp-action="Index" class="small-box-footer">
                المزيد <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
    </div>
    
    <div class="col-lg-3 col-md-6 col-12 mb-3">
        <div class="info-box bg-info">
            <span class="info-box-icon">
                <i class="fas fa-home"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">صفحات الرئيسية</span>
                <span class="info-box-number">@ViewBag.TotalHomePages</span>
            </div>
            <a asp-controller="HomePages" asp-action="Index" class="small-box-footer">
                المزيد <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
    </div>

    <div class="col-lg-3 col-md-6 col-12 mb-3">
        <div class="info-box bg-warning">
            <span class="info-box-icon">
                <i class="fas fa-inbox"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">إجمالي الرسائل</span>
                <span class="info-box-number">@ViewBag.TotalMessages</span>
            </div>
            <a asp-controller="ContactMessages" asp-action="Index" class="small-box-footer">
                المزيد <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-3 col-md-6 col-12 mb-3">
        <div class="info-box bg-danger">
            <span class="info-box-icon">
                <i class="fas fa-envelope"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text">رسائل غير مقروءة</span>
                <span class="info-box-number">@ViewBag.UnreadMessages</span>
            </div>
            <a asp-controller="ContactMessages" asp-action="Index" class="small-box-footer">
                المزيد <i class="fas fa-arrow-circle-left"></i>
            </a>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row">
    <div class="col-12">
        <div class="card card-primary card-outline">
            <div class="card-header">
                <h3 class="card-title">
                    <i class="fas fa-bolt"></i> إجراءات سريعة
                </h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="Products" asp-action="Index" class="btn btn-primary btn-block">
                            <i class="fas fa-boxes mb-2"></i>
                            <span>عرض المنتجات</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="HomePages" asp-action="Index" class="btn btn-info btn-block">
                            <i class="fas fa-edit mb-2"></i>
                            <span>تعديل الصفحات</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="CompanyInfo" asp-action="Edit" class="btn btn-secondary btn-block">
                            <i class="fas fa-building mb-2"></i>
                            <span>بيانات الشركة</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="SocialMedia" asp-action="Index" class="btn btn-success btn-block">
                            <i class="fas fa-share-alt mb-2"></i>
                            <span>حسابات التواصل</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="ContactPage" asp-action="Edit" class="btn btn-warning btn-block">
                            <i class="fas fa-envelope mb-2"></i>
                            <span>صفحة اتصل بنا</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="Categories" asp-action="Index" class="btn btn-danger btn-block">
                            <i class="fas fa-tags mb-2"></i>
                            <span>فئات التواصل</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="AboutPages" asp-action="Index" class="btn btn-primary btn-block">
                            <i class="fas fa-info-circle mb-2"></i>
                            <span>صفحات من نحن</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="ContactMessages" asp-action="Index" class="btn btn-warning btn-block">
                            <i class="fas fa-inbox mb-2"></i>
                            <span>رسائل العملاء</span>
                        </a>
                    </div>
                    <div class="col-lg-3 col-md-6 col-12 mb-3">
                        <a asp-controller="ChatbotFAQ" asp-action="Index" class="btn btn-info btn-block">
                            <i class="fas fa-comments mb-2"></i>
                            <span>الشات بوت</span>
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
