@{
    ViewData["Title"] = "لوحة التحكم الرئيسية";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Statistics Cards -->
<div class="row g-4 mb-4">
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-primary bg-opacity-10 text-primary">
                    <i class="bi bi-box-seam"></i>
                </div>
                <div class="me-3">
                    <h3 class="mb-0">@ViewBag.TotalProducts</h3>
                    <p class="text-muted mb-0">إجمالي المنتجات</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-success bg-opacity-10 text-success">
                    <i class="bi bi-check-circle"></i>
                </div>
                <div class="me-3">
                    <h3 class="mb-0">@ViewBag.ActiveProducts</h3>
                    <p class="text-muted mb-0">المنتجات النشطة</p>
                </div>
            </div>
        </div>
    </div>
    <div class="col-md-4">
        <div class="stat-card">
            <div class="d-flex align-items-center">
                <div class="stat-icon bg-info bg-opacity-10 text-info">
                    <i class="bi bi-file-text"></i>
                </div>
                <div class="me-3">
                    <h3 class="mb-0">@ViewBag.TotalHomePages</h3>
                    <p class="text-muted mb-0">صفحات الرئيسية</p>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Quick Actions -->
<div class="row g-4">
    <div class="col-12">
        <div class="stat-card">
            <h5 class="mb-3"><i class="bi bi-lightning-charge me-2"></i>إجراءات سريعة</h5>
            <div class="row g-3">
                <div class="col-md-2">
                    <a asp-controller="Products" asp-action="Create" class="btn btn-primary w-100">
                        <i class="bi bi-plus-circle me-2"></i>
                        إضافة منتج
                    </a>
                </div>
                <div class="col-md-2">
                    <a asp-controller="HomePages" asp-action="Index" class="btn btn-info w-100">
                        <i class="bi bi-pencil-square me-2"></i>
                        تعديل الصفحات
                    </a>
                </div>
                <div class="col-md-2">
                    <a asp-controller="CompanyInfo" asp-action="Edit" class="btn btn-secondary w-100">
                        <i class="bi bi-building me-2"></i>
                        بيانات الشركة
                    </a>
                </div>
                <div class="col-md-2">
                    <a asp-controller="SocialMedia" asp-action="Index" class="btn btn-primary w-100">
                        <i class="bi bi-share me-2"></i>
                        حسابات التواصل
                    </a>
                </div>
                <div class="col-md-2">
                    <a asp-controller="ContactPage" asp-action="Edit" class="btn btn-warning w-100">
                        <i class="bi bi-envelope me-2"></i>
                        صفحة اتصل بنا
                    </a>
                </div>
                <div class="col-md-2">
                    <a asp-controller="Categories" asp-action="Index" class="btn btn-success w-100">
                        <i class="bi bi-tags me-2"></i>
                        فئات التواصل
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
