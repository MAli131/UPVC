@model UPVC.ViewModels.LoginViewModel
@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>تسجيل الدخول - لوحة التحكم</title>
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <!-- AdminLTE -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <!-- Google Font: Cairo -->
    <link href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700;800&display=swap" rel="stylesheet">
    
    <style>
        * {
            font-family: 'Cairo', sans-serif !important;
            direction: rtl !important;
            text-align: right !important;
        }
        
        body {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            background-attachment: fixed;
        }
        
        .login-page {
            display: flex;
            align-items: center;
            justify-content: center;
            min-height: 100vh;
            padding: 2rem 0;
        }
        
        .login-box {
            width: 480px;
            max-width: 95%;
        }
        
        .login-logo {
            text-align: center !important;
            margin-bottom: 2rem;
            animation: fadeInDown 0.8s;
        }
        
        .login-logo .brand-text {
            background: white;
            padding: 1.5rem 2rem;
            border-radius: 15px;
            box-shadow: 0 10px 40px rgba(0,0,0,0.3);
            display: inline-block;
        }
        
        .login-logo h1 {
            color: #667eea;
            font-size: 2.5rem;
            font-weight: 800;
            margin: 0;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.1);
        }
        
        .login-logo p {
            color: #764ba2;
            font-size: 1.1rem;
            margin: 0.5rem 0 0 0;
            font-weight: 600;
        }
        
        .card {
            border-radius: 15px;
            box-shadow: 0 15px 50px rgba(0,0,0,0.3);
            border: none;
            overflow: hidden;
            animation: fadeInUp 0.8s;
        }
        
        .card-body {
            padding: 2.5rem;
            background: white;
        }
        
        .login-title {
            text-align: center !important;
            margin-bottom: 2rem;
        }
        
        .login-title h3 {
            color: #333;
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
        }
        
        .login-title p {
            color: #666;
            font-size: 1rem;
        }
        
        .input-group {
            margin-bottom: 1.5rem;
        }
        
        .input-group .form-control {
            border-right: 1px solid #ced4da;
            border-left: 0;
            text-align: right !important;
            direction: rtl !important;
            padding: 0.8rem 1rem;
            font-size: 1.1rem;
            height: auto;
        }
        
        .input-group .form-control:focus {
            border-color: #667eea;
            box-shadow: none;
        }
        
        .input-group-text {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            color: white;
            border: none;
            padding: 0.8rem 1.2rem;
            font-size: 1.2rem;
        }
        
        .btn-login {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border: none;
            padding: 1rem;
            font-weight: 700;
            font-size: 1.2rem;
            width: 100%;
            border-radius: 8px;
            color: white;
            transition: all 0.3s;
            margin-top: 1rem;
        }
        
        .btn-login:hover {
            transform: translateY(-3px);
            box-shadow: 0 10px 25px rgba(102, 126, 234, 0.5);
            color: white;
        }
        
        .alert {
            font-size: 1rem;
            padding: 1rem 1.25rem;
            margin-bottom: 1.5rem;
            border-radius: 8px;
            animation: fadeIn 0.5s;
        }
        
        .card-footer {
            background: linear-gradient(135deg, #f8f9fa 0%, #e9ecef 100%);
            padding: 1.5rem;
            text-align: center !important;
            border: none;
        }
        
        .card-footer a {
            color: #667eea;
            text-decoration: none;
            font-size: 1.1rem;
            font-weight: 600;
            transition: all 0.3s;
        }
        
        .card-footer a:hover {
            color: #764ba2;
            text-decoration: none;
        }
        
        .copyright {
            text-align: center !important;
            color: white;
            margin-top: 2rem;
            font-size: 1rem;
            text-shadow: 1px 1px 3px rgba(0,0,0,0.3);
            animation: fadeIn 1s;
        }
        
        @@keyframes fadeInDown {
            from {
                opacity: 0;
                transform: translateY(-30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }
        
        @@keyframes fadeIn {
            from {
                opacity: 0;
            }
            to {
                opacity: 1;
            }
        }
        
        .text-danger {
            font-size: 0.9rem;
            display: block;
            margin-top: -1rem;
            margin-bottom: 0.5rem;
        }
    </style>
</head>
<body class="login-page">
<div class="login-box">
    <div class="login-logo">
        <div class="brand-text">
            <h1><i class="fas fa-shield-alt"></i> EMAPEN</h1>
            <p>لوحة التحكم الإدارية</p>
        </div>
    </div>
    
    <div class="card">
        <div class="card-body">
            <div class="login-title">
                <h3><i class="fas fa-user-shield"></i> تسجيل الدخول</h3>
                <p>مرحباً بك في لوحة التحكم</p>
            </div>

            @if (TempData["LogoutMessage"] != null)
            {
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["LogoutMessage"]
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            }

            @if (!ViewData.ModelState.IsValid)
            {
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-triangle"></i>
                    <ul class="mb-0" style="padding-right: 1.5rem;">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <li>@error.ErrorMessage</li>
                        }
                    </ul>
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                </div>
            }

            <form asp-action="Login" asp-controller="Account" asp-area="Admin" method="post">
                <input type="hidden" asp-for="ReturnUrl" />
                
                <div class="input-group">
                    <input asp-for="Username" class="form-control" placeholder="أدخل اسم المستخدم" autocomplete="username" required />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fas fa-user"></i>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Username" class="text-danger"></span>

                <div class="input-group">
                    <input asp-for="Password" class="form-control" placeholder="أدخل كلمة المرور" autocomplete="current-password" required />
                    <div class="input-group-append">
                        <div class="input-group-text">
                            <i class="fas fa-lock"></i>
                        </div>
                    </div>
                </div>
                <span asp-validation-for="Password" class="text-danger"></span>

                <button type="submit" class="btn btn-login">
                    <i class="fas fa-sign-in-alt"></i> تسجيل الدخول الآن
                </button>
            </form>
        </div>
        
        <div class="card-footer">
            <a asp-controller="Home" asp-action="Index">
                <i class="fas fa-home"></i> العودة للموقع الرئيسي
            </a>
        </div>
    </div>
    
    <div class="copyright">
        <i class="fas fa-copyright"></i> @DateTime.Now.Year EMAPEN - جميع الحقوق محفوظة
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- AdminLTE App -->
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
@await Html.PartialAsync("_ValidationScriptsPartial")
</body>
</html>
