@{
    var username = ViewBag.AdminUsername as string ?? "المسؤول";
    var currentController = ViewContext.RouteData.Values["controller"]?.ToString();
}

<!DOCTYPE html>
<html lang="ar" dir="rtl">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>@ViewData["Title"] - EMAPEN Admin</title>

    <!-- Google Font: Cairo (Arabic Support) -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Cairo:wght@300;400;600;700&display=swap">
    
    <!-- Font Awesome -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    
    <!-- AdminLTE RTL -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    
    <!-- Bootstrap Icons (للأيقونات الموجودة) -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    
    <!-- Enhanced Admin Dashboard Styles -->
    <link rel="stylesheet" href="~/css/admin-enhanced.css">

    <style>
        /* RTL Custom Styles */
        body {
            font-family: 'Cairo', sans-serif !important;
            overflow-x: hidden;
            overflow-y: hidden;
            direction: rtl;
            text-align: right;
        }
        
        html, body {
            height: 100%;
            margin: 0;
            padding: 0;
        }
        
        * {
            direction: rtl;
            text-align: right;
        }
        
        h1, h2, h3, h4, h5, h6,
        p, span, div, label, a,
        .card-title, .card-text,
        .info-box-text, .info-box-number,
        .form-control, input, textarea, select {
            direction: rtl !important;
            text-align: right !important;
        }
        
        .wrapper {
            height: 100vh;
            overflow: hidden;
        }
        
        /* Sidebar RTL Adjustments */
        .main-sidebar {
            position: fixed;
            right: 0;
            left: auto;
            top: 0;
            height: 100vh;
            overflow-x: hidden;
            width: 250px;
        }
        
        .content-wrapper,
        .main-footer {
            margin-right: 250px;
            margin-left: 0;
        }
        
        .content-wrapper {
            min-height: calc(100vh - 3.5rem - 3.5rem);
            max-height: calc(100vh - 3.5rem - 3.5rem);
            overflow-y: auto;
            overflow-x: hidden;
            position: relative;
            width: calc(100vw - 250px);
            background-color: #f4f6f9;
        }
        
        .content-wrapper::-webkit-scrollbar {
            width: 8px;
        }
        
        .content-wrapper::-webkit-scrollbar-track {
            background: #f1f1f1;
        }
        
        .content-wrapper::-webkit-scrollbar-thumb {
            background: #888;
            border-radius: 4px;
        }
        
        .content-wrapper::-webkit-scrollbar-thumb:hover {
            background: #555;
        }
        
        @@media (max-width: 991.98px) {
            .main-sidebar {
                right: -260px;
            }
            
            .content-wrapper,
            .main-footer {
                margin-right: 0 !important;
                margin-left: 0 !important;
                width: 100vw !important;
            }
            
            body.sidebar-open .main-sidebar {
                right: 0;
            }
        }
        
        /* Cards & Tables RTL */
        .card-tools {
            float: left;
        }
        
        .table th,
        .table td {
            text-align: right !important;
            direction: rtl !important;
        }
        
        .table thead th {
            text-align: right !important;
        }
        
        .table tbody td {
            text-align: right !important;
        }
        
        /* Badge RTL */
        .badge {
            direction: rtl !important;
            text-align: right !important;
        }
        
        /* List items RTL */
        ul, ol, li {
            text-align: right !important;
            direction: rtl !important;
        }
        
        .list-unstyled li {
            text-align: right !important;
        }
        
        /* Breadcrumb */
        .breadcrumb-item + .breadcrumb-item::before {
            float: right;
            padding-left: 0.5rem;
            padding-right: 0;
            content: "‹";
        }
        
        /* Forms */
        .form-check {
            padding-right: 1.25em;
            padding-left: 0;
        }
        
        .form-check-input {
            float: right;
            margin-right: -1.25em;
            margin-left: 0;
        }
        
        /* Buttons in card-header */
        .card-header .btn {
            margin-left: 0.5rem;
        }
        
        /* Alert positioning */
        .alert-dismissible .btn-close,
        .alert-dismissible .close {
            left: 0;
            right: auto;
        }
        
        .brand-image {
            margin-left: 0.8rem;
            margin-right: 0;
        }
        
        /* Make content full width */
        .content .container-fluid {
            padding-right: 10px;
            padding-left: 10px;
            max-width: 100%;
            width: 100%;
        }
        
        .content {
            padding: 0.75rem;
            width: 100%;
        }
        
        .content-header {
            padding: 0.5rem 0.75rem;
        }
        
        .content-header .container-fluid {
            padding-right: 10px;
            padding-left: 10px;
        }
        
        /* Full width rows */
        .content .row {
            margin-right: -10px;
            margin-left: -10px;
        }
        
        .content [class*="col-"] {
            padding-right: 10px;
            padding-left: 10px;
        }
        
        /* Main header fixed */
        .main-header {
            position: fixed;
            top: 0;
            right: 0;
            left: 0;
            z-index: 1030;
            margin-right: 250px;
            margin-left: 0;
            width: calc(100vw - 250px);
        }
        
        @@media (max-width: 991.98px) {
            .main-header {
                margin-right: 0;
                width: 100vw;
            }
        }
        
        /* Content wrapper positioning */
        .content-wrapper {
            margin-top: 3.5rem;
        }
        
        /* Footer fixed at bottom */
        .main-footer {
            position: fixed;
            bottom: 0;
            right: 250px;
            left: 0;
            z-index: 1029;
            background-color: #fff;
            border-top: 1px solid #dee2e6;
        }
        
        @@media (max-width: 991.98px) {
            .main-footer {
                right: 0;
            }
        }
        
        /* Pushmenu button RTL */
        [data-widget="pushmenu"] {
            margin-right: 0;
        }
        
        /* User Panel */
        .user-panel {
            border-bottom: 1px solid rgba(255,255,255,0.1);
            padding: 1rem 0 !important;
        }
        
        .user-panel .info a {
            font-size: 1.1rem;
            font-weight: 600;
            color: #fff !important;
        }
    </style>

    @RenderSection("Styles", required: false)
</head>
<body class="hold-transition sidebar-mini layout-fixed" dir="rtl">
<div class="wrapper">

    <!-- Navbar -->
    <nav class="main-header navbar navbar-expand">
        <!-- Right navbar links (pushmenu on right) -->
        <ul class="navbar-nav">
            <li class="nav-item" style="display:none;">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button">
                    <i class="fas fa-bars"></i>
                </a>
            </li>
        </ul>

        <!-- Left navbar links (user info on left) -->
        <ul class="navbar-nav" style="margin-left: auto; margin-right: 0;">
            <li class="nav-item d-none d-sm-inline-block">
                <a class="nav-link">
                    <i class="fas fa-user-circle"></i> مرحباً، @username
                </a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="#" data-toggle="modal" data-target="#changePasswordModal">
                    <i class="fas fa-key"></i> تغيير كلمة السر
                </a>
            </li>
            <li class="nav-item">
                <form asp-controller="Account" asp-action="Logout" method="post" class="d-inline">
                    <button type="submit" class="nav-link btn btn-link" style="border: none; background: none; padding: 0.5rem 1rem; color: #fff;">
                        <i class="fas fa-sign-out-alt"></i> تسجيل الخروج
                    </button>
                </form>
            </li>
        </ul>
    </nav>

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="#" class="brand-link text-center">
            <span class="brand-text font-weight-bold">EMAPEN</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex justify-content-center">
                <div class="info text-center">
                    <a href="#" class="d-block text-white">لوحة التحكم</a>
                </div>
            </div>

            <!-- Warning Alert -->
            <div class="sidebar-warning-alert">
                <i class="fas fa-info-circle"></i>
                للوصول للموقع العام يجب تسجيل الخروج أولاً
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" style="padding:0px" data-widget="treeview" role="menu" data-accordion="false">
                    
                    <!-- Dashboard -->
                    <li class="nav-item">
                        <a asp-controller="Dashboard" asp-action="Index" 
                           class="nav-link @(currentController == "Dashboard" ? "active" : "")">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>الرئيسية</p>
                        </a>
                    </li>

                    <!-- HomePages -->
                    <li class="nav-item">
                        <a asp-controller="HomePages" asp-action="Index" 
                           class="nav-link @(currentController == "HomePages" ? "active" : "")">
                            <i class="nav-icon fas fa-home"></i>
                            <p>صفحات الرئيسية</p>
                        </a>
                    </li>

                    <!-- CompanyInfo -->
                    <li class="nav-item">
                        <a asp-controller="CompanyInfo" asp-action="Edit" 
                           class="nav-link @(currentController == "CompanyInfo" ? "active" : "")">
                            <i class="nav-icon fas fa-building"></i>
                            <p>بيانات الشركة</p>
                        </a>
                    </li>

                    <!-- SocialMedia -->
                    <li class="nav-item">
                        <a asp-controller="SocialMedia" asp-action="Index" 
                           class="nav-link @(currentController == "SocialMedia" ? "active" : "")">
                            <i class="nav-icon fas fa-share-alt"></i>
                            <p>حسابات التواصل</p>
                        </a>
                    </li>

                    <!-- ContactPage -->
                    <li class="nav-item">
                        <a asp-controller="ContactPage" asp-action="Edit" 
                           class="nav-link @(currentController == "ContactPage" ? "active" : "")">
                            <i class="nav-icon fas fa-envelope"></i>
                            <p>صفحة اتصل بنا</p>
                        </a>
                    </li>

                    <!-- Categories -->
                    <li class="nav-item">
                        <a asp-controller="Categories" asp-action="Index" 
                           class="nav-link @(currentController == "Categories" ? "active" : "")">
                            <i class="nav-icon fas fa-tags"></i>
                            <p>فئات التواصل</p>
                        </a>
                    </li>

                    <!-- Products -->
                    <li class="nav-item">
                        <a asp-controller="Products" asp-action="Index" 
                           class="nav-link @(currentController == "Products" ? "active" : "")">
                            <i class="nav-icon fas fa-box"></i>
                            <p>المنتجات</p>
                        </a>
                    </li>

                    <!-- Contact Messages -->
                    <li class="nav-item">
                        <a asp-controller="ContactMessages" asp-action="Index" 
                           class="nav-link @(currentController == "ContactMessages" ? "active" : "")">
                            <i class="nav-icon fas fa-inbox"></i>
                            <p>رسائل العملاء</p>
                        </a>
                    </li>

                    <!-- Chatbot FAQ -->
                    <li class="nav-item">
                        <a asp-controller="ChatbotFAQ" asp-action="Index" 
                           class="nav-link @(currentController == "ChatbotFAQ" ? "active" : "")">
                            <i class="nav-icon fas fa-comments"></i>
                            <p>الشات بوت</p>
                        </a>
                    </li>

                </ul>
            </nav>
        </div>
    </aside>

    <!-- Content Wrapper -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-12">
                        <h1 class="m-0">@ViewData["Title"]</h1>
                    </div>
                </div>
            </div>
        </div>

        <!-- Success/Error Messages -->
        @if (TempData["Success"] != null)
        {
            <div class="container-fluid">
                <div class="alert alert-success alert-dismissible fade show" role="alert">
                    <i class="fas fa-check-circle"></i> @TempData["Success"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }
        @if (TempData["Error"] != null)
        {
            <div class="container-fluid">
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="fas fa-exclamation-circle"></i> @TempData["Error"]
                    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
            </div>
        }

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                @RenderBody()
            </div>
        </section>
    </div>

    <!-- Main Footer -->
    <footer hidden="true" class="main-footer text-center">
        <strong>حقوق النشر &copy; @DateTime.Now.Year <a href="#">EMAPEN</a>.</strong>
        جميع الحقوق محفوظة.
    </footer>

</div>

<!-- Change Password Modal -->
<div class="modal fade" id="changePasswordModal" tabindex="-1" role="dialog" aria-labelledby="changePasswordModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content" style="border-radius: 10px; border: none;">
            <div class="modal-header" style="background: linear-gradient(135deg, #667eea 0%, #764ba2 100%); color: #fff; border-bottom: none;">
                <h5 class="modal-title" id="changePasswordModalLabel">
                    <i class="fas fa-key"></i> تغيير كلمة السر
                </h5>
                <button type="button" class="close text-white" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <form asp-controller="Account" asp-action="ChangePassword" method="post">
                <div class="modal-body" style="padding: 1.5rem;">
                    <div id="passwordChangeAlert" class="alert alert-dismissible fade" role="alert" style="display: none;">
                        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                        <span id="passwordChangeMessage"></span>
                    </div>

                    <div class="form-group">
                        <label for="currentPassword">كلمة السر الحالية <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-lock"></i></span>
                            </div>
                            <input type="password" class="form-control" id="currentPassword" name="currentPassword" required>
                        </div>
                    </div>

                    <div class="form-group">
                        <label for="newPassword">كلمة السر الجديدة <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input type="password" class="form-control" id="newPassword" name="newPassword" required minlength="6">
                        </div>
                        <small class="form-text text-muted">يجب أن تكون 6 أحرف على الأقل</small>
                    </div>

                    <div class="form-group">
                        <label for="confirmPassword">تأكيد كلمة السر الجديدة <span class="text-danger">*</span></label>
                        <div class="input-group">
                            <div class="input-group-prepend">
                                <span class="input-group-text"><i class="fas fa-check"></i></span>
                            </div>
                            <input type="password" class="form-control" id="confirmPassword" name="confirmPassword" required>
                        </div>
                    </div>
                </div>
                <div class="modal-footer" style="border-top: 1px solid #dee2e6;">
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">
                        <i class="fas fa-times"></i> إلغاء
                    </button>
                    <button type="submit" class="btn btn-primary">
                        <i class="fas fa-save"></i> حفظ التغييرات
                    </button>
                </div>
            </form>
        </div>
    </div>
</div>

<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<!-- Bootstrap 4 -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>

<script>
    // Password validation
    $('#changePasswordModal form').on('submit', function(e) {
        var newPassword = $('#newPassword').val();
        var confirmPassword = $('#confirmPassword').val();
        
        if (newPassword !== confirmPassword) {
            e.preventDefault();
            $('#passwordChangeAlert')
                .removeClass('alert-success').addClass('alert-danger')
                .find('#passwordChangeMessage').text('كلمة السر الجديدة وتأكيد كلمة السر غير متطابقتين');
            $('#passwordChangeAlert').show();
            return false;
        }
    });

    // Clear form on modal close
    $('#changePasswordModal').on('hidden.bs.modal', function () {
        $(this).find('form')[0].reset();
        $('#passwordChangeAlert').hide();
    });
</script>

@RenderSection("Scripts", required: false)

</body>
</html>
