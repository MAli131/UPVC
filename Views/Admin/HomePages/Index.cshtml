@model IEnumerable<UPVC.Models.HomePage>
@{
    ViewData["Title"] = "إدارة صفحات Home";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-house-door me-2"></i>صفحات الرئيسية</h2>
        <p class="text-muted">تعديل محتوى صفحات Home المختلفة</p>
    </div>
</div>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["Success"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    @foreach (var item in Model)
    {
        <div class="col-md-6 mb-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-start mb-3">
                        <h5 class="card-title">
                            <span class="badge bg-primary">@item.PageKey</span>
                        </h5>
                        <span class="badge @(item.IsActive ? "bg-success" : "bg-secondary")">
                            <i class="bi bi-@(item.IsActive ? "check-circle" : "x-circle") me-1"></i>
                            @(item.IsActive ? "نشط" : "غير نشط")
                        </span>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="text-primary"><i class="bi bi-translate me-2"></i>العنوان</h6>
                        <p class="mb-1"><strong>English:</strong> @item.TitleEn</p>
                        <p class="mb-0"><strong>العربي:</strong> @item.TitleAr</p>
                    </div>
                    
                    <div class="mb-3">
                        <h6 class="text-primary"><i class="bi bi-card-text me-2"></i>العنوان الفرعي</h6>
                        <p class="mb-1"><strong>English:</strong> @item.SubtitleEn</p>
                        <p class="mb-0"><strong>العربي:</strong> @item.SubtitleAr</p>
                    </div>

                    <div class="text-end mt-3">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">
                            <i class="bi bi-pencil me-1"></i>تعديل
                        </a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
