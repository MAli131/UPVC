@model IEnumerable<UPVC.Models.HomePage>
@{
    ViewData["Title"] = "إدارة صفحات Home";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Success Alert -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Info Box -->
<div class="row mb-3">
    <div class="col-12">
        <div class="info-box bg-gradient-info" style="min-height: 100px; border-radius: 10px; box-shadow: 0 3px 10px rgba(0,0,0,0.1);">
            <span class="info-box-icon" style="width: 90px; display: flex; align-items: center; justify-content: center;">
                <i class="fas fa-home" style="font-size: 2.5rem;"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text" style="font-size: 1.1rem; font-weight: 500;">إدارة صفحات الرئيسية</span>
                <span class="info-box-number" style="font-size: 2rem; font-weight: bold;">@Model.Count() صفحة</span>
            </div>
        </div>
    </div>
</div>

<!-- Pages Grid -->
<div class="row">
    @if (Model.Any())
    {
        @foreach (var homePage in Model)
        {
            var sectionsCount = homePage.Sections?.Count ?? 0;
            var badgeColor = "bg-info";
            var pageIcon = "fas fa-file-alt";
            var pageDescription = "";

            // تحديد نوع الصفحة والوصف
            if (homePage.PageKey == "Index")
            {
                badgeColor = "bg-primary";
                pageIcon = "fas fa-home";
                pageDescription = "الصفحة الرئيسية الأولى";
            }
            else if (homePage.PageKey == "Home2")
            {
                badgeColor = "bg-success";
                pageIcon = "fas fa-star";
                pageDescription = $"مميزات المنتج - {sectionsCount} قسم";
            }
            else if (homePage.PageKey == "Home3")
            {
                badgeColor = "bg-warning";
                pageIcon = "fas fa-trophy";
                pageDescription = $"الأكبر في مصر - {sectionsCount} قسم";
            }
            else if (homePage.PageKey == "Home4")
            {
                badgeColor = "bg-purple";
                pageIcon = "fas fa-building";
                pageDescription = "المشاريع المكتملة";
            }

            <div class="col-lg-6 col-12 mb-3">
                <div class="card shadow-sm" style="border-radius: 10px; overflow: hidden; border: none;">
                    <div class="card-header @badgeColor" style="padding: 1rem 1.25rem; border: none;">
                        <h3 class="card-title mb-0" style="font-size: 1.2rem; font-weight: 600; color: #fff;">
                            <i class="@pageIcon"></i> @homePage.PageKey
                        </h3>
                        <div class="card-tools" style="float: left; direction: ltr;">
                            @if (homePage.IsActive)
                            {
                                <span class="badge bg-light text-success" style="font-size: 0.9rem; padding: 0.4rem 0.8rem;">
                                    <i class="fas fa-check-circle"></i> نشط
                                </span>
                            }
                            else
                            {
                                <span class="badge bg-light text-secondary" style="font-size: 0.9rem; padding: 0.4rem 0.8rem;">
                                    <i class="fas fa-times-circle"></i> غير نشط
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-body" style="padding: 1.25rem; background-color: #f8f9fa;">
                        <!-- Page Description -->
                        <div class="mb-3 text-center">
                            <span class="badge badge-light" style="font-size: 1rem; padding: 0.6rem 1.2rem; border: 2px solid #dee2e6;">
                                <i class="@pageIcon"></i> @pageDescription
                            </span>
                        </div>

                        <!-- Title Info -->
                        <div class="alert alert-light border" style="margin-bottom: 1rem; padding: 1rem;">
                            <h6 class="mb-2" style="font-size: 0.9rem; color: #6c757d;">
                                <i class="fas fa-heading"></i> العنوان الرئيسي
                            </h6>
                            <p class="mb-0 font-weight-bold" style="font-size: 1rem; color: #495057;" title="@homePage.TitleAr">
                                @(homePage.TitleAr.Length > 50 ? homePage.TitleAr.Substring(0, 50) + "..." : homePage.TitleAr)
                            </p>
                        </div>

                        <!-- Sections Info (if exists) -->
                        @if (sectionsCount > 0)
                        {
                            <div class="d-flex align-items-center" style="background-color: #fff; padding: 0.75rem; border-radius: 8px; border-left: 4px solid #17a2b8;">
                                <i class="fas fa-list fa-2x text-info mr-3"></i>
                                <div>
                                    <small class="text-muted d-block">الأقسام المتاحة</small>
                                    <strong style="font-size: 1.1rem;">@sectionsCount قسم</strong>
                                </div>
                            </div>
                        }
                    </div>
                    <div class="card-footer bg-white" style="padding: 1rem 1.25rem; border-top: 1px solid #dee2e6;">
                        @if (homePage.PageKey == "Index")
                        {
                            <a asp-action="EditIndex" class="btn btn-primary btn-block" style="font-size: 1rem; padding: 0.6rem; border-radius: 8px;">
                                <i class="fas fa-edit"></i> تعديل الصفحة
                            </a>
                        }
                        else if (homePage.PageKey == "Home2")
                        {
                            <a asp-action="EditHome2" class="btn btn-success btn-block" style="font-size: 1rem; padding: 0.6rem; border-radius: 8px;">
                                <i class="fas fa-edit"></i> تعديل الصفحة والأقسام
                            </a>
                        }
                        else if (homePage.PageKey == "Home3")
                        {
                            <a asp-action="EditHome3" class="btn btn-warning btn-block" style="font-size: 1rem; padding: 0.6rem; border-radius: 8px;">
                                <i class="fas fa-edit"></i> تعديل الصفحة والأقسام
                            </a>
                        }
                        else if (homePage.PageKey == "Home4")
                        {
                            <a asp-action="EditHome4" class="btn btn-block" style="background-color: #6f42c1; color: white; font-size: 1rem; padding: 0.6rem; border-radius: 8px;">
                                <i class="fas fa-edit"></i> تعديل الصفحة
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card card-secondary card-outline">
                <div class="card-body text-center" style="padding: 2rem;">
                    <i class="fas fa-inbox" style="font-size: 3rem; color: #6c757d; margin-bottom: 1rem;"></i>
                    <p class="text-muted" style="font-size: 1rem;">لا توجد صفحات متاحة حاليًا</p>
                </div>
            </div>
        </div>
    }
</div>
