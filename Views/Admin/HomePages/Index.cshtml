@model IEnumerable<UPVC.Models.HomePage>
@{
    ViewData["Title"] = "إدارة صفحات Home";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Success Alert -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Info Box -->
<div class="row mb-3">
    <div class="col-12">
        <div class="info-box bg-gradient-info" style="min-height: 80px;">
            <span class="info-box-icon" style="width: 80px; height: 80px; line-height: 80px;">
                <i class="fas fa-home" style="font-size: 2rem;"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text" style="font-size: 1rem;">إدارة صفحات الرئيسية</span>
                <span class="info-box-number" style="font-size: 1.5rem;">@Model.Count() صفحة</span>
            </div>
        </div>
    </div>
</div>

<!-- Pages Grid -->
<div class="row">
    @if (Model.Any())
    {
        @foreach (var homePage in Model)
        {
            var sectionsCount = homePage.Sections?.Count ?? 0;
            var badgeColor = "bg-info";
            var pageIcon = "fas fa-file-alt";
            var pageDescription = "";

            // تحديد نوع الصفحة والوصف
            if (homePage.PageKey == "Index")
            {
                badgeColor = "bg-primary";
                pageIcon = "fas fa-home";
                pageDescription = "الصفحة الرئيسية الأولى";
            }
            else if (homePage.PageKey == "Home2")
            {
                badgeColor = "bg-success";
                pageIcon = "fas fa-star";
                pageDescription = $"مميزات المنتج - {sectionsCount} قسم";
            }
            else if (homePage.PageKey == "Home3")
            {
                badgeColor = "bg-warning";
                pageIcon = "fas fa-trophy";
                pageDescription = $"الأكبر في مصر - {sectionsCount} قسم";
            }
            else if (homePage.PageKey == "Home4")
            {
                badgeColor = "bg-purple";
                pageIcon = "fas fa-building";
                pageDescription = "المشاريع المكتملة";
            }

            <div class="col-lg-6 col-12 mb-3">
                <div class="card card-outline card-primary" style="margin-bottom: 0;">
                    <div class="card-header" style="padding: 0.75rem 1rem;">
                        <h3 class="card-title" style="font-size: 1.1rem;">
                            <i class="@pageIcon" style="font-size: 1rem;"></i> @homePage.PageKey
                        </h3>
                        <div class="card-tools" style="float: left; direction: ltr;">
                            @if (homePage.IsActive)
                            {
                                <span class="badge badge-success" style="font-size: 0.85rem; padding: 0.35rem 0.65rem;">
                                    <i class="fas fa-check-circle"></i> نشط
                                </span>
                            }
                            else
                            {
                                <span class="badge badge-secondary" style="font-size: 0.85rem; padding: 0.35rem 0.65rem;">
                                    <i class="fas fa-times-circle"></i> غير نشط
                                </span>
                            }
                        </div>
                    </div>
                    <div class="card-body" style="padding: 0.75rem;">
                        <!-- Page Type Badge -->
                        <div class="mb-2">
                            <span class="badge @badgeColor" style="font-size: 0.9rem; padding: 0.4rem 0.8rem;">
                                <i class="@pageIcon"></i> @pageDescription
                            </span>
                        </div>

                        <!-- Title Info -->
                        <div class="info-box @badgeColor" style="min-height: 70px; margin-bottom: 0.75rem;">
                            <span class="info-box-icon" style="width: 60px; height: 70px; line-height: 70px;">
                                <i class="fas fa-heading" style="font-size: 1.5rem;"></i>
                            </span>
                            <div class="info-box-content">
                                <span class="info-box-text" style="font-size: 0.85rem;">العنوان الرئيسي</span>
                                <span class="info-box-number" style="font-size: 0.9rem; white-space: nowrap; overflow: hidden; text-overflow: ellipsis; display: block;" title="@homePage.TitleAr">
                                    @(homePage.TitleAr.Length > 40 ? homePage.TitleAr.Substring(0, 40) + "..." : homePage.TitleAr)
                                </span>
                            </div>
                        </div>

                        <!-- Sections Info (if exists) -->
                        @if (sectionsCount > 0)
                        {
                            <div class="callout callout-info" style="padding: 0.5rem; margin-bottom: 0.75rem;">
                                <p class="mb-0" style="font-size: 0.85rem;">
                                    <i class="fas fa-list"></i> <strong>الأقسام:</strong> @sectionsCount قسم
                                </p>
                            </div>
                        }
                    </div>
                    <div class="card-footer" style="padding: 0.75rem 1rem;">
                        @if (homePage.PageKey == "Index")
                        {
                            <a asp-action="EditIndex" class="btn btn-primary" style="font-size: 0.95rem; padding: 0.45rem 1rem;">
                                <i class="fas fa-edit"></i> تعديل الصفحة
                            </a>
                        }
                        else if (homePage.PageKey == "Home2")
                        {
                            <a asp-action="EditHome2" class="btn btn-success" style="font-size: 0.95rem; padding: 0.45rem 1rem;">
                                <i class="fas fa-edit"></i> تعديل الصفحة والأقسام
                            </a>
                        }
                        else if (homePage.PageKey == "Home3")
                        {
                            <a asp-action="EditHome3" class="btn btn-warning" style="font-size: 0.95rem; padding: 0.45rem 1rem;">
                                <i class="fas fa-edit"></i> تعديل الصفحة والأقسام
                            </a>
                        }
                        else if (homePage.PageKey == "Home4")
                        {
                            <a asp-action="EditHome4" class="btn" style="background-color: #6f42c1; color: white; font-size: 0.95rem; padding: 0.45rem 1rem;">
                                <i class="fas fa-edit"></i> تعديل الصفحة
                            </a>
                        }
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <div class="col-12">
            <div class="card card-secondary card-outline">
                <div class="card-body text-center" style="padding: 2rem;">
                    <i class="fas fa-inbox" style="font-size: 3rem; color: #6c757d; margin-bottom: 1rem;"></i>
                    <p class="text-muted" style="font-size: 1rem;">لا توجد صفحات متاحة حاليًا</p>
                </div>
            </div>
        </div>
    }
</div>
