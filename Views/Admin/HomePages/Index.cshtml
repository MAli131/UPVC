@model IEnumerable<UPVC.Models.HomePage>
@{
    ViewData["Title"] = "إدارة صفحات Home";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <!-- Success Alert -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-home"></i> قائمة صفحات الرئيسية
                        </h3>
                    </div>
                    <div class="col-auto">
                        <span class="badge badge-info">@Model.Count() صفحة</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 50px">#</th>
                                <th>مفتاح الصفحة</th>
                                <th>الوصف</th>
                                <th>العنوان</th>
                                <th style="width: 80px">الأقسام</th>
                                <th style="width: 100px">الحالة</th>
                                <th style="width: 150px">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var homePage in Model)
                                {
                                    var sectionsCount = homePage.Sections?.Count ?? 0;
                                    var badgeColor = "badge-info";
                                    var pageIcon = "fas fa-file-alt";
                                    var pageDescription = "";
                                    var editAction = "";

                                    // تحديد نوع الصفحة والوصف
                                    if (homePage.PageKey == "Index")
                                    {
                                        badgeColor = "badge-primary";
                                        pageIcon = "fas fa-home";
                                        pageDescription = "الصفحة الرئيسية الأولى";
                                        editAction = "EditIndex";
                                    }
                                    else if (homePage.PageKey == "Home2")
                                    {
                                        badgeColor = "badge-success";
                                        pageIcon = "fas fa-star";
                                        pageDescription = "مميزات المنتج";
                                        editAction = "EditHome2";
                                    }
                                    else if (homePage.PageKey == "Home3")
                                    {
                                        badgeColor = "badge-warning";
                                        pageIcon = "fas fa-trophy";
                                        pageDescription = "الأكبر في مصر";
                                        editAction = "EditHome3";
                                    }
                                    else if (homePage.PageKey == "Home4")
                                    {
                                        badgeColor = "badge-purple";
                                        pageIcon = "fas fa-building";
                                        pageDescription = "المشاريع المكتملة";
                                        editAction = "EditHome4";
                                    }

                                    <tr>
                                        <td class="font-weight-bold">@homePage.Id</td>
                                        <td>
                                            <span class="badge @badgeColor" style="font-size: 0.875rem;">
                                                <i class="@pageIcon"></i> @homePage.PageKey
                                            </span>
                                        </td>
                                        <td>
                                            <i class="@pageIcon text-muted"></i> @pageDescription
                                        </td>
                                        <td>
                                            <div title="@homePage.TitleAr" style="max-width: 300px; overflow: hidden; text-overflow: ellipsis; white-space: nowrap;">
                                                @homePage.TitleAr
                                            </div>
                                            <small class="text-muted">@homePage.TitleEn</small>
                                        </td>
                                        <td class="text-center">
                                            @if (sectionsCount > 0)
                                            {
                                                <span class="badge badge-info" style="font-size: 0.85rem;">
                                                    <i class="fas fa-list"></i> @sectionsCount
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="text-muted">-</span>
                                            }
                                        </td>
                                        <td>
                                            @if (homePage.IsActive)
                                            {
                                                <span class="badge badge-success">
                                                    <i class="fas fa-check-circle"></i> نشط
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">
                                                    <i class="fas fa-times-circle"></i> غير نشط
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="@editAction" class="btn btn-sm btn-primary" title="تعديل">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="7" class="text-center text-muted py-4">
                                        <i class="fas fa-home fa-3x mb-3 d-block"></i>
                                        <p class="mb-0">لا توجد صفحات متاحة حاليًا</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>