@model UPVC.Models.HomePage
@{
    ViewData["Title"] = "تعديل صفحة Index";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Success Alert -->
@if (TempData["Success"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["Success"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Info Box -->
<div class="row mb-2">
    <div class="col-12">
        <div class="info-box bg-gradient-primary" style="min-height: 70px;">
            <span class="info-box-icon" style="width: 70px; height: 70px; line-height: 70px;">
                <i class="fas fa-home" style="font-size: 1.8rem;"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text" style="font-size: 0.9rem;">تعديل صفحة</span>
                <span class="info-box-number" style="font-size: 1.2rem;">Index - الصفحة الرئيسية الأولى</span>
            </div>
        </div>
    </div>
</div>

<!-- Form -->
<form asp-action="EditIndex" method="post">
    <div class="row">
        <!-- Column 1 -->
        <div class="col-lg-6">
            <!-- Titles Card -->
            <div class="card card-primary card-outline" style="margin-bottom: 0.75rem;">
                <div class="card-header" style="padding: 0.5rem 0.75rem;">
                    <h3 class="card-title" style="font-size: 0.95rem;">
                        <i class="fas fa-heading"></i> العناوين الرئيسية
                    </h3>
                </div>
                <div class="card-body" style="padding: 0.75rem;">
                    <div class="form-group" style="margin-bottom: 0.75rem;">
                        <label asp-for="TitleAr" style="font-size: 0.85rem; margin-bottom: 0.25rem;">العنوان بالعربي <span class="text-danger">*</span></label>
                        <input asp-for="TitleAr" class="form-control form-control-sm" required />
                        <span asp-validation-for="TitleAr" class="text-danger" style="font-size: 0.75rem;"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <label asp-for="TitleEn" style="font-size: 0.85rem; margin-bottom: 0.25rem;">Title in English <span class="text-danger">*</span></label>
                        <input asp-for="TitleEn" class="form-control form-control-sm" required />
                        <span asp-validation-for="TitleEn" class="text-danger" style="font-size: 0.75rem;"></span>
                    </div>
                </div>
            </div>

            <!-- Subtitles Card -->
            <div class="card card-info card-outline" style="margin-bottom: 0.75rem;">
                <div class="card-header" style="padding: 0.5rem 0.75rem;">
                    <h3 class="card-title" style="font-size: 0.95rem;">
                        <i class="fas fa-align-right"></i> العناوين الفرعية
                    </h3>
                </div>
                <div class="card-body" style="padding: 0.75rem;">
                    <div class="form-group" style="margin-bottom: 0.75rem;">
                        <label asp-for="SubtitleAr" style="font-size: 0.85rem; margin-bottom: 0.25rem;">العنوان الفرعي بالعربي</label>
                        <input asp-for="SubtitleAr" class="form-control form-control-sm" />
                        <span asp-validation-for="SubtitleAr" class="text-danger" style="font-size: 0.75rem;"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <label asp-for="SubtitleEn" style="font-size: 0.85rem; margin-bottom: 0.25rem;">Subtitle in English</label>
                        <input asp-for="SubtitleEn" class="form-control form-control-sm" />
                        <span asp-validation-for="SubtitleEn" class="text-danger" style="font-size: 0.75rem;"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Column 2 -->
        <div class="col-lg-6">
            <!-- Content Card -->
            <div class="card card-success card-outline" style="margin-bottom: 0.75rem;">
                <div class="card-header" style="padding: 0.5rem 0.75rem;">
                    <h3 class="card-title" style="font-size: 0.95rem;">
                        <i class="fas fa-file-alt"></i> المحتوى
                    </h3>
                </div>
                <div class="card-body" style="padding: 0.75rem;">
                    <div class="form-group" style="margin-bottom: 0.75rem;">
                        <label asp-for="ContentAr" style="font-size: 0.85rem; margin-bottom: 0.25rem;">المحتوى بالعربي</label>
                        <textarea asp-for="ContentAr" class="form-control form-control-sm" rows="5"></textarea>
                        <span asp-validation-for="ContentAr" class="text-danger" style="font-size: 0.75rem;"></span>
                    </div>
                    <div class="form-group" style="margin-bottom: 0;">
                        <label asp-for="ContentEn" style="font-size: 0.85rem; margin-bottom: 0.25rem;">Content in English</label>
                        <textarea asp-for="ContentEn" class="form-control form-control-sm" rows="5"></textarea>
                        <span asp-validation-for="ContentEn" class="text-danger" style="font-size: 0.75rem;"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-12">
            <div class="card" style="margin-bottom: 0.75rem;">
                <div class="card-footer" style="padding: 0.75rem;">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> حفظ التغييرات
                    </button>
                    <a asp-action="Index" class="btn btn-secondary btn-sm" style="margin-right: 0.5rem;">
                        <i class="fas fa-arrow-right"></i> رجوع
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>
