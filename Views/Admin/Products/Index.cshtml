@model IEnumerable<UPVC.Models.Product>
@{
    ViewData["Title"] = "إدارة المنتجات";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<section class="content">
    <div class="container-fluid">
        <!-- Success/Error Alerts -->
        @if (TempData["Success"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <i class="fas fa-check-circle"></i> @TempData["Success"]
                <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
        }

        <div class="card">
            <div class="card-header">
                <div class="row align-items-center">
                    <div class="col">
                        <h3 class="card-title mb-0">
                            <i class="fas fa-boxes"></i> قائمة المنتجات
                        </h3>
                    </div>
                    <div class="col-auto">
                        <span class="badge badge-primary">@Model.Count() منتج</span>
                    </div>
                </div>
            </div>
            <div class="card-body p-0">
                <div class="table-responsive">
                    <table class="table table-striped">
                        <thead>
                            <tr>
                                <th style="width: 50px">#</th>
                                <th>اسم المنتج</th>
                                <th>الاسم الإنجليزي</th>
                                <th style="width: 80px">مواصفات</th>
                                <th style="width: 80px">ألوان</th>
                                <th style="width: 80px">تصاميم</th>
                                <th style="width: 100px">الحالة</th>
                                <th style="width: 200px">الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @if (Model.Any())
                            {
                                @foreach (var product in Model)
                                {
                                    var specsCount = product.ProductDetails?.Specifications?.Count(ps => ps.IsActive) ?? 0;
                                    var colorsCount = product.ProductDetails?.Colors?.Count(pc => pc.IsActive) ?? 0;
                                    var designsCount = product.ProductDetails?.DesignOptions?.Count(pdo => pdo.IsActive) ?? 0;
                                    
                                    <tr>
                                        <td class="font-weight-bold">@product.Id</td>
                                        <td>
                                            <strong>@product.NameAr</strong>
                                        </td>
                                        <td>
                                            <i class="fas fa-globe text-info"></i> @product.NameEn
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="EditSpecifications" asp-route-id="@product.Id" 
                                               class="badge badge-primary" 
                                               title="المواصفات"
                                               style="font-size: 0.85rem; padding: 0.4rem 0.6rem;">
                                                <i class="fas fa-list-ul"></i> @specsCount
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="EditColors" asp-route-id="@product.Id" 
                                               class="badge badge-warning" 
                                               title="الألوان"
                                               style="font-size: 0.85rem; padding: 0.4rem 0.6rem;">
                                                <i class="fas fa-palette"></i> @colorsCount
                                            </a>
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="EditDesignOptions" asp-route-id="@product.Id" 
                                               class="badge badge-purple" 
                                               title="التصاميم"
                                               style="font-size: 0.85rem; padding: 0.4rem 0.6rem; background-color: #9C27B0; color: white;">
                                                <i class="fas fa-drafting-compass"></i> @designsCount
                                            </a>
                                        </td>
                                        <td>
                                            @if (product.IsActive)
                                            {
                                                <span class="badge badge-success">
                                                    <i class="fas fa-check-circle"></i> نشط
                                                </span>
                                            }
                                            else
                                            {
                                                <span class="badge badge-secondary">
                                                    <i class="fas fa-times-circle"></i> غير نشط
                                                </span>
                                            }
                                        </td>
                                        <td class="text-center">
                                            <a asp-action="Edit" asp-route-id="@product.Id" 
                                               class="btn btn-sm btn-primary" 
                                               title="تعديل المنتج">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                        </td>
                                    </tr>
                                }
                            }
                            else
                            {
                                <tr>
                                    <td colspan="8" class="text-center text-muted py-4">
                                        <i class="fas fa-boxes fa-3x mb-3 d-block"></i>
                                        <p class="mb-0">لا توجد منتجات في النظام</p>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</section>
