@model UPVC.Models.ContactPage
@{
    ViewData["Title"] = "إدارة صفحة اتصل بنا";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<!-- Success Alert -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    
    <div class="row">
        <!-- Column 1 -->
        <div class="col-lg-6">
            <!-- Card 1: العنوان الرئيسي -->
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-heading"></i> العنوان الرئيسي
                    </h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="TitleAr">
                            <i class="fas fa-language"></i> العنوان (عربي) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="TitleAr" class="form-control" placeholder="أدخل العنوان بالعربي" required />
                        <span asp-validation-for="TitleAr" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="TitleEn">
                            <i class="fas fa-globe"></i> العنوان (English) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="TitleEn" class="form-control" placeholder="Enter title in English" required />
                        <span asp-validation-for="TitleEn" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Card 2: العنوان الفرعي -->
            <div class="card card-success card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-align-right"></i> العنوان الفرعي
                    </h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="SubtitleAr">
                            <i class="fas fa-language"></i> العنوان الفرعي (عربي) <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="SubtitleAr" class="form-control" rows="2" placeholder="أدخل العنوان الفرعي بالعربي" required></textarea>
                        <span asp-validation-for="SubtitleAr" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="SubtitleEn">
                            <i class="fas fa-globe"></i> العنوان الفرعي (English) <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="SubtitleEn" class="form-control" rows="2" placeholder="Enter subtitle in English" required></textarea>
                        <span asp-validation-for="SubtitleEn" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Card 3: تمييز العنوان الفرعي -->
            <div class="card card-info card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-star"></i> تمييز العنوان الفرعي
                    </h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="SubtitleHighlightAr">
                            <i class="fas fa-language"></i> النص المميز (عربي)
                        </label>
                        <input asp-for="SubtitleHighlightAr" class="form-control" placeholder="النص الذي سيظهر بشكل مميز" />
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> اختياري - سيظهر بلون مميز في العنوان الفرعي
                        </small>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="SubtitleHighlightEn">
                            <i class="fas fa-globe"></i> النص المميز (English)
                        </label>
                        <input asp-for="SubtitleHighlightEn" class="form-control" placeholder="Highlighted text" />
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> Optional - will appear highlighted in subtitle
                        </small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Column 2 -->
        <div class="col-lg-6">
            <!-- Card 4: المحتوى -->
            <div class="card card-warning card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-file-alt"></i> المحتوى
                    </h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="ContentAr">
                            <i class="fas fa-language"></i> المحتوى (عربي) <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="ContentAr" class="form-control" rows="4" placeholder="أدخل المحتوى بالعربي" required></textarea>
                        <span asp-validation-for="ContentAr" class="text-danger"></span>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ContentEn">
                            <i class="fas fa-globe"></i> المحتوى (English) <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="ContentEn" class="form-control" rows="4" placeholder="Enter content in English" required></textarea>
                        <span asp-validation-for="ContentEn" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Card 5: تمييز المحتوى -->
            <div class="card card-secondary card-outline">
                <div class="card-header">
                    <h3 class="card-title">
                        <i class="fas fa-highlighter"></i> تمييز المحتوى
                    </h3>
                </div>
                <div class="card-body">
                    <div class="form-group">
                        <label asp-for="ContentHighlightAr">
                            <i class="fas fa-language"></i> النص المميز في المحتوى (عربي)
                        </label>
                        <input asp-for="ContentHighlightAr" class="form-control" placeholder="النص الذي سيظهر بشكل مميز" />
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> اختياري - سيظهر بلون مميز في المحتوى
                        </small>
                    </div>
                    
                    <div class="form-group">
                        <label asp-for="ContentHighlightEn">
                            <i class="fas fa-globe"></i> النص المميز في المحتوى (English)
                        </label>
                        <input asp-for="ContentHighlightEn" class="form-control" placeholder="Highlighted content text" />
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> Optional - will appear highlighted in content
                        </small>
                    </div>
                </div>
            </div>

            <!-- Info Card -->
            <div class="card card-light">
                <div class="card-body">
                    <div class="callout callout-info">
                        <h5><i class="fas fa-info-circle"></i> ملاحظة</h5>
                        <p class="mb-0">الحقول المميزة بـ <span class="text-danger">*</span> إلزامية. النصوص المميزة اختيارية وتستخدم لإبراز كلمات معينة في الصفحة.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Submit Section -->
    <div class="row mt-3">
        <div class="col-12">
            <div class="card">
                <div class="card-footer">
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="fas fa-save"></i> حفظ التغييرات
                    </button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-default btn-lg">
                        <i class="fas fa-times"></i> إلغاء
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
