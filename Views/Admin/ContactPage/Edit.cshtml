@model UPVC.Models.ContactPage
@{
    ViewData["Title"] = "إدارة صفحة اتصل بنا";
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-envelope me-2"></i>إدارة صفحة اتصل بنا</h2>
        <p class="text-muted">تعديل محتوى ونصوص صفحة Contact</p>
    </div>
    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-right me-2"></i>العودة للوحة التحكم
    </a>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="bi bi-check-circle me-2"></i>@TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="Edit" method="post">
    @Html.AntiForgeryToken()
    
    <div class="row g-4">
        <!-- Card 1: العنوان الرئيسي -->
        <div class="col-md-6">
            <div class="card border-primary shadow-sm h-100">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="bi bi-card-heading me-2"></i>العنوان الرئيسي</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="TitleAr" class="form-label fw-bold">
                            العنوان (عربي) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="TitleAr" class="form-control" placeholder="أدخل العنوان بالعربي" required />
                        <span asp-validation-for="TitleAr" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="TitleEn" class="form-label fw-bold">
                            العنوان (English) <span class="text-danger">*</span>
                        </label>
                        <input asp-for="TitleEn" class="form-control" placeholder="Enter title in English" required />
                        <span asp-validation-for="TitleEn" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2: العنوان الفرعي -->
        <div class="col-md-6">
            <div class="card border-success shadow-sm h-100">
                <div class="card-header bg-success text-white">
                    <h5 class="mb-0"><i class="bi bi-card-text me-2"></i>العنوان الفرعي</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="SubtitleAr" class="form-label fw-bold">
                            العنوان الفرعي (عربي) <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="SubtitleAr" class="form-control" rows="2" placeholder="أدخل العنوان الفرعي بالعربي" required></textarea>
                        <span asp-validation-for="SubtitleAr" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SubtitleEn" class="form-label fw-bold">
                            العنوان الفرعي (English) <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="SubtitleEn" class="form-control" rows="2" placeholder="Enter subtitle in English" required></textarea>
                        <span asp-validation-for="SubtitleEn" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3: Subtitle Highlight -->
        <div class="col-md-6">
            <div class="card border-info shadow-sm h-100">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0"><i class="bi bi-star me-2"></i>تمييز العنوان الفرعي</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="SubtitleHighlightAr" class="form-label fw-bold">
                            النص المميز (عربي)
                        </label>
                        <input asp-for="SubtitleHighlightAr" class="form-control" placeholder="النص الذي سيظهر بشكل مميز" />
                        <small class="text-muted">اختياري - سيظهر بلون مميز في العنوان الفرعي</small>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="SubtitleHighlightEn" class="form-label fw-bold">
                            النص المميز (English)
                        </label>
                        <input asp-for="SubtitleHighlightEn" class="form-control" placeholder="Highlighted text" />
                        <small class="text-muted">Optional - will appear highlighted in subtitle</small>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 4: المحتوى -->
        <div class="col-md-6">
            <div class="card border-warning shadow-sm h-100">
                <div class="card-header bg-warning text-dark">
                    <h5 class="mb-0"><i class="bi bi-file-text me-2"></i>المحتوى</h5>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <label asp-for="ContentAr" class="form-label fw-bold">
                            المحتوى (عربي) <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="ContentAr" class="form-control" rows="3" placeholder="أدخل المحتوى بالعربي" required></textarea>
                        <span asp-validation-for="ContentAr" class="text-danger"></span>
                    </div>
                    
                    <div class="mb-3">
                        <label asp-for="ContentEn" class="form-label fw-bold">
                            المحتوى (English) <span class="text-danger">*</span>
                        </label>
                        <textarea asp-for="ContentEn" class="form-control" rows="3" placeholder="Enter content in English" required></textarea>
                        <span asp-validation-for="ContentEn" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 5: Content Highlight -->
        <div class="col-md-12">
            <div class="card border-secondary shadow-sm">
                <div class="card-header bg-secondary text-white">
                    <h5 class="mb-0"><i class="bi bi-star-fill me-2"></i>تمييز المحتوى</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ContentHighlightAr" class="form-label fw-bold">
                                    النص المميز في المحتوى (عربي)
                                </label>
                                <input asp-for="ContentHighlightAr" class="form-control" placeholder="النص الذي سيظهر بشكل مميز" />
                                <small class="text-muted">اختياري - سيظهر بلون مميز في المحتوى</small>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="mb-3">
                                <label asp-for="ContentHighlightEn" class="form-label fw-bold">
                                    النص المميز في المحتوى (English)
                                </label>
                                <input asp-for="ContentHighlightEn" class="form-control" placeholder="Highlighted content text" />
                                <small class="text-muted">Optional - will appear highlighted in content</small>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Submit Section -->
    <div class="card mt-4 border-0 shadow-sm">
        <div class="card-body">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <button type="submit" class="btn btn-primary btn-lg">
                        <i class="bi bi-save me-2"></i>حفظ التغييرات
                    </button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                        <i class="bi bi-x-circle me-2"></i>إلغاء
                    </a>
                </div>
                <small class="text-muted">
                    <i class="bi bi-info-circle me-1"></i>
                    الحقول المميزة بـ <span class="text-danger">*</span> إلزامية
                </small>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
