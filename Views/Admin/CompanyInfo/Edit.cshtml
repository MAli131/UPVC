@model UPVC.Models.CompanyInfo

@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "إدارة بيانات الشركة";
}

<!-- Success Alert -->
@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<!-- Info Box -->
<div class="row mb-2">
    <div class="col-12">
        <div class="info-box bg-gradient-primary" style="min-height: 70px;">
            <span class="info-box-icon" style="width: 60px; height: 70px; line-height: 70px;">
                <i class="fas fa-building" style="font-size: 1.5rem;"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text" style="font-size: 0.9rem;">إدارة بيانات الشركة</span>
                <span class="info-box-number" style="font-size: 1.1rem;">تحديث المعلومات الأساسية</span>
            </div>
        </div>
    </div>
</div>

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row">
        <!-- البيانات الأساسية -->
        <div class="col-lg-6 mb-2">
            <div class="card card-primary card-outline">
                <div class="card-header" style="padding: 0.5rem 0.75rem;">
                    <h3 class="card-title" style="font-size: 1rem;">
                        <i class="fas fa-info-circle"></i> البيانات الأساسية
                    </h3>
                </div>
                <div class="card-body" style="padding: 0.75rem;">
                    <div class="form-group">
                        <label><i class="fas fa-font"></i> اسم الشركة (عربي) <span class="text-danger">*</span></label>
                        <input asp-for="NameAr" class="form-control form-control-sm" required />
                        <span asp-validation-for="NameAr" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-globe"></i> اسم الشركة (إنجليزي) <span class="text-danger">*</span></label>
                        <input asp-for="NameEn" class="form-control form-control-sm" required />
                        <span asp-validation-for="NameEn" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-phone"></i> الهاتف <span class="text-danger">*</span></label>
                        <input asp-for="Phone" class="form-control form-control-sm" required />
                        <span asp-validation-for="Phone" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-mobile-alt"></i> الجوال <span class="text-danger">*</span></label>
                        <input asp-for="Mobile" class="form-control form-control-sm" required />
                        <span asp-validation-for="Mobile" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-envelope"></i> البريد الإلكتروني <span class="text-danger">*</span></label>
                        <input asp-for="Email" type="email" class="form-control form-control-sm" required />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- العنوان والوصف -->
        <div class="col-lg-6 mb-2">
            <div class="card card-success card-outline">
                <div class="card-header" style="padding: 0.5rem 0.75rem;">
                    <h3 class="card-title" style="font-size: 1rem;">
                        <i class="fas fa-map-marker-alt"></i> العنوان والوصف
                    </h3>
                </div>
                <div class="card-body" style="padding: 0.75rem;">
                    <div class="form-group">
                        <label><i class="fas fa-language"></i> العنوان (عربي) <span class="text-danger">*</span></label>
                        <textarea asp-for="AddressAr" class="form-control form-control-sm" rows="2" required></textarea>
                        <span asp-validation-for="AddressAr" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-globe"></i> العنوان (إنجليزي) <span class="text-danger">*</span></label>
                        <textarea asp-for="AddressEn" class="form-control form-control-sm" rows="2" required></textarea>
                        <span asp-validation-for="AddressEn" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-align-right"></i> الوصف (عربي) <span class="text-danger">*</span></label>
                        <textarea asp-for="DescriptionAr" class="form-control form-control-sm" rows="2" required></textarea>
                        <span asp-validation-for="DescriptionAr" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-align-left"></i> الوصف (إنجليزي) <span class="text-danger">*</span></label>
                        <textarea asp-for="DescriptionEn" class="form-control form-control-sm" rows="2" required></textarea>
                        <span asp-validation-for="DescriptionEn" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- الشعارات -->
        <div class="col-lg-6 mb-2">
            <div class="card card-info card-outline">
                <div class="card-header" style="padding: 0.5rem 0.75rem;">
                    <h3 class="card-title" style="font-size: 1rem;">
                        <i class="fas fa-quote-right"></i> الشعارات
                    </h3>
                </div>
                <div class="card-body" style="padding: 0.75rem;">
                    <div class="form-group">
                        <label><i class="fas fa-language"></i> الشعار (عربي) <span class="text-danger">*</span></label>
                        <input asp-for="SloganAr" class="form-control form-control-sm" required />
                        <span asp-validation-for="SloganAr" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-globe"></i> الشعار (إنجليزي) <span class="text-danger">*</span></label>
                        <input asp-for="SloganEn" class="form-control form-control-sm" required />
                        <span asp-validation-for="SloganEn" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>

        <!-- حقوق النشر -->
        <div class="col-lg-6 mb-2">
            <div class="card card-warning card-outline">
                <div class="card-header" style="padding: 0.5rem 0.75rem;">
                    <h3 class="card-title" style="font-size: 1rem;">
                        <i class="fas fa-copyright"></i> حقوق النشر
                    </h3>
                </div>
                <div class="card-body" style="padding: 0.75rem;">
                    <div class="form-group">
                        <label><i class="fas fa-language"></i> نص حقوق النشر (عربي) <span class="text-danger">*</span></label>
                        <input asp-for="CopyrightTextAr" class="form-control form-control-sm" required />
                        <span asp-validation-for="CopyrightTextAr" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label><i class="fas fa-globe"></i> نص حقوق النشر (إنجليزي) <span class="text-danger">*</span></label>
                        <input asp-for="CopyrightTextEn" class="form-control form-control-sm" required />
                        <span asp-validation-for="CopyrightTextEn" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- أزرار الحفظ -->
    <div class="row">
        <div class="col-12">
            <div class="card card-secondary card-outline">
                <div class="card-footer" style="padding: 0.5rem 0.75rem;">
                    <button type="submit" class="btn btn-primary btn-sm">
                        <i class="fas fa-save"></i> حفظ التغييرات
                    </button>
                    <a asp-controller="Dashboard" asp-action="Index" class="btn btn-default btn-sm">
                        <i class="fas fa-times"></i> إلغاء
                    </a>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
