@model UPVC.Models.SocialMedia

@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "إضافة حساب تواصل اجتماعي";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-0">إضافة حساب تواصل اجتماعي</h2>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <form asp-action="Create" method="post">
                <div class="row">
                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">المنصة</label>
                            <input asp-for="Platform" class="form-control" placeholder="مثال: Facebook, Twitter, Instagram" />
                            <span asp-validation-for="Platform" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">الرابط</label>
                            <input asp-for="Url" type="url" class="form-control" placeholder="https://..." />
                            <span asp-validation-for="Url" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="col-md-6">
                        <div class="mb-3">
                            <label class="form-label">فئة الأيقونة (Bootstrap Icons)</label>
                            <select asp-for="IconClass" class="form-select" id="iconSelect">
                                <option value="">-- اختر أيقونة --</option>
                                <option value="bi bi-facebook">Facebook</option>
                                <option value="bi bi-twitter">Twitter / X</option>
                                <option value="bi bi-instagram">Instagram</option>
                                <option value="bi bi-linkedin">LinkedIn</option>
                                <option value="bi bi-whatsapp">WhatsApp</option>
                                <option value="bi bi-youtube">YouTube</option>
                                <option value="bi bi-tiktok">TikTok</option>
                                <option value="bi bi-telegram">Telegram</option>
                                <option value="bi bi-snapchat">Snapchat</option>
                                <option value="bi bi-pinterest">Pinterest</option>
                                <option value="bi bi-reddit">Reddit</option>
                                <option value="bi bi-discord">Discord</option>
                                <option value="bi bi-twitch">Twitch</option>
                                <option value="bi bi-github">GitHub</option>
                            </select>
                            <span asp-validation-for="IconClass" class="text-danger"></span>
                            <div class="mt-2">
                                <small class="text-muted">معاينة الأيقونة: </small>
                                <i id="iconPreview" class="fs-3 me-2"></i>
                                <span id="iconText"></span>
                            </div>
                        </div>

                        <div class="mb-3">
                            <label class="form-label">الترتيب</label>
                            <input asp-for="DisplayOrder" type="number" class="form-control" value="0" />
                            <span asp-validation-for="DisplayOrder" class="text-danger"></span>
                        </div>
                    </div>
                </div>

                <div class="form-check mb-3">
                    <input asp-for="IsActive" class="form-check-input" type="checkbox" checked />
                    <label class="form-check-label">
                        نشط
                    </label>
                </div>

                <div class="row mt-4">
                    <div class="col">
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-save"></i> حفظ
                        </button>
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="bi bi-arrow-right"></i> رجوع
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

<div class="card mt-4">
    <div class="card-header">
        <h5 class="mb-0">أمثلة على الأيقونات</h5>
    </div>
    <div class="card-body">
        <div class="row">
            <div class="col-md-3 mb-3">
                <i class="bi bi-facebook fs-3 me-2"></i> <code>bi bi-facebook</code>
            </div>
            <div class="col-md-3 mb-3">
                <i class="bi bi-twitter fs-3 me-2"></i> <code>bi bi-twitter</code>
            </div>
            <div class="col-md-3 mb-3">
                <i class="bi bi-instagram fs-3 me-2"></i> <code>bi bi-instagram</code>
            </div>
            <div class="col-md-3 mb-3">
                <i class="bi bi-linkedin fs-3 me-2"></i> <code>bi bi-linkedin</code>
            </div>
            <div class="col-md-3 mb-3">
                <i class="bi bi-whatsapp fs-3 me-2"></i> <code>bi bi-whatsapp</code>
            </div>
            <div class="col-md-3 mb-3">
                <i class="bi bi-youtube fs-3 me-2"></i> <code>bi bi-youtube</code>
            </div>
            <div class="col-md-3 mb-3">
                <i class="bi bi-tiktok fs-3 me-2"></i> <code>bi bi-tiktok</code>
            </div>
            <div class="col-md-3 mb-3">
                <i class="bi bi-telegram fs-3 me-2"></i> <code>bi bi-telegram</code>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Icon preview functionality
        document.getElementById('iconSelect').addEventListener('change', function() {
            const iconClass = this.value;
            const iconPreview = document.getElementById('iconPreview');
            const iconText = document.getElementById('iconText');
            
            iconPreview.className = iconClass + ' fs-3 me-2';
            iconText.textContent = iconClass ? iconClass : '';
        });
        
        // Auto-fill platform name based on icon selection
        document.getElementById('iconSelect').addEventListener('change', function() {
            const platformInput = document.querySelector('input[name="Platform"]');
            const selectedOption = this.options[this.selectedIndex];
            
            if (platformInput.value === '' && selectedOption.text !== '-- اختر أيقونة --') {
                platformInput.value = selectedOption.text;
            }
        });
    </script>
}
