@model List<UPVC.Models.SocialMedia>

@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "إدارة حسابات التواصل الاجتماعي";
}

<div class="container-fluid">
    <div class="row mb-4">
        <div class="col">
            <h2 class="mb-0">إدارة حسابات التواصل الاجتماعي</h2>
            <p class="text-muted">تعديل روابط حسابات التواصل الاجتماعي</p>
        </div>
    </div>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <div class="card">
        <div class="card-body">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead>
                            <tr>
                                <th>المنصة</th>
                                <th>الرابط</th>
                                <th>الأيقونة</th>
                                <th>الترتيب</th>
                                <th>الحالة</th>
                                <th>الإجراءات</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        <i class="@item.IconClass me-2"></i>
                                        @item.Platform
                                    </td>
                                    <td>
                                        <a href="@item.Url" target="_blank" class="text-decoration-none">
                                            @item.Url
                                        </a>
                                    </td>
                                    <td>
                                        <code>@item.IconClass</code>
                                    </td>
                                    <td>@item.DisplayOrder</td>
                                    <td>
                                        @if (item.IsActive)
                                        {
                                            <span class="badge bg-success">نشط</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">غير نشط</span>
                                        }
                                    </td>
                                    <td>
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                            <i class="bi bi-pencil"></i> تعديل
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-share display-1 text-muted"></i>
                    <p class="mt-3 text-muted">لا توجد حسابات تواصل اجتماعي</p>
                </div>
            }
        </div>
    </div>
</div>
