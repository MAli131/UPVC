@model List<UPVC.Models.SocialMedia>

@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "إدارة حسابات التواصل الاجتماعي";
}

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        <i class="fas fa-check-circle"></i> @TempData["SuccessMessage"]
        <button type="button" class="close" data-dismiss="alert" aria-label="Close">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}

<div class="card card-primary card-outline">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-share-alt"></i> حسابات التواصل الاجتماعي
        </h3>
    </div>
    <div class="card-body">
        @if (Model.Any())
        {
            <div class="table-responsive">
                <table class="table table-hover table-striped">
                    <thead class="table-light">
                        <tr>
                            <th><i class="fas fa-tag"></i> المنصة</th>
                            <th><i class="fas fa-link"></i> الرابط</th>
                            <th><i class="fas fa-icons"></i> الأيقونة</th>
                            <th><i class="fas fa-sort-numeric-down"></i> الترتيب</th>
                            <th><i class="fas fa-toggle-on"></i> الحالة</th>
                            <th><i class="fas fa-cog"></i> الإجراءات</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    <i class="@item.IconClass" style="font-size: 1.2rem; margin-left: 0.5rem;"></i>
                                    <strong>@item.Platform</strong>
                                </td>
                                <td>
                                    <a href="@item.Url" target="_blank" class="text-primary">
                                        <i class="fas fa-external-link-alt"></i> @item.Url
                                    </a>
                                </td>
                                <td>
                                    <span class="badge badge-info">@item.IconClass</span>
                                </td>
                                <td>
                                    <span class="badge badge-secondary">@item.DisplayOrder</span>
                                </td>
                                <td>
                                    @if (item.IsActive)
                                    {
                                        <span class="badge badge-success">
                                            <i class="fas fa-check-circle"></i> نشط
                                        </span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-secondary">
                                            <i class="fas fa-times-circle"></i> غير نشط
                                        </span>
                                    }
                                </td>
                                <td>
                                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                                        <i class="fas fa-edit"></i> تعديل
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <i class="fas fa-share-alt fa-5x text-muted mb-3"></i>
                <h5 class="text-muted">لا توجد حسابات تواصل اجتماعي</h5>
                <p class="text-muted">قم بإضافة حسابات التواصل الاجتماعي الخاصة بك</p>
            </div>
        }
    </div>
</div>

<!-- Info Card -->
<div class="card card-info card-outline mt-3">
    <div class="card-header">
        <h3 class="card-title">
            <i class="fas fa-info-circle"></i> معلومات مهمة
        </h3>
    </div>
    <div class="card-body">
        <ul class="list-unstyled mb-0">
            <li class="mb-2">
                <i class="fas fa-check text-success"></i> يمكنك تعديل رابط URL لكل منصة
            </li>
            <li class="mb-2">
                <i class="fas fa-check text-success"></i> المنصة (Platform) لا يمكن تعديلها
            </li>
            <li class="mb-2">
                <i class="fas fa-check text-success"></i> الحسابات النشطة فقط تظهر في الموقع
            </li>
            <li>
                <i class="fas fa-check text-success"></i> الترتيب يحدد ظهور الأيقونات في الموقع
            </li>
        </ul>
    </div>
</div>
