@model UPVC.Models.SocialMedia

@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "تعديل حساب التواصل الاجتماعي";
}

<!-- Info Box -->
<div class="row mb-2">
    <div class="col-12">
        <div class="info-box bg-gradient-primary" style="min-height: 70px;">
            <span class="info-box-icon" style="width: 60px; height: 70px; line-height: 70px;">
                <i class="fas fa-edit" style="font-size: 1.5rem;"></i>
            </span>
            <div class="info-box-content">
                <span class="info-box-text" style="font-size: 0.9rem;">تحديث حساب التواصل الاجتماعي</span>
                <span class="info-box-number" style="font-size: 1.1rem;">@Model.Platform</span>
            </div>
        </div>
    </div>
</div>

<!-- Main Form Card -->
<div class="row">
    <div class="col-lg-8">
        <div class="card card-primary card-outline">
            <div class="card-header" style="padding: 0.5rem 0.75rem;">
                <h3 class="card-title" style="font-size: 1rem;">
                    <i class="fas fa-share-alt"></i> معلومات الحساب
                </h3>
            </div>
            <div class="card-body" style="padding: 0.75rem;">
                <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
                    @Html.AntiForgeryToken()
                    
                    <input type="hidden" asp-for="Platform" />
                    <input type="hidden" asp-for="IconClass" />
                    <input type="hidden" asp-for="DisplayOrder" />
                    <input type="hidden" asp-for="IsActive" />

                    <div class="form-group">
                        <label>
                            <i class="fas fa-layer-group"></i> المنصة
                        </label>
                        <input type="text" class="form-control" value="@Model.Platform" disabled readonly />
                        <small class="form-text text-muted">
                            <i class="fas fa-info-circle"></i> لا يمكن تعديل نوع المنصة
                        </small>
                    </div>

                    <div class="form-group">
                        <label>
                            <i class="fas fa-link"></i> الرابط <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Url" type="url" class="form-control" placeholder="https://..." required />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>

                    <div class="card-footer" style="padding: 0.5rem 0.75rem;">
                        <button type="submit" class="btn btn-primary btn-sm">
                            <i class="fas fa-save"></i> حفظ التغييرات
                        </button>
                        <a asp-action="Index" class="btn btn-default btn-sm">
                            <i class="fas fa-times"></i> إلغاء
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <!-- Icon Examples Card -->
    <div class="col-lg-4">
        <div class="card card-info card-outline">
            <div class="card-header" style="padding: 0.5rem 0.75rem;">
                <h3 class="card-title" style="font-size: 1rem;">
                    <i class="fas fa-icons"></i> أيقونات مشهورة
                </h3>
            </div>
            <div class="card-body" style="padding: 0.75rem;">
                <div class="row">
                    <div class="col-6 text-center mb-2">
                        <i class="fab fa-facebook fa-lg text-primary"></i>
                        <div><small class="text-muted" style="font-size: 0.75rem;">Facebook</small></div>
                    </div>
                    <div class="col-6 text-center mb-2">
                        <i class="fab fa-twitter fa-lg" style="color: #1DA1F2;"></i>
                        <div><small class="text-muted" style="font-size: 0.75rem;">Twitter</small></div>
                    </div>
                    <div class="col-6 text-center mb-2">
                        <i class="fab fa-instagram fa-lg text-danger"></i>
                        <div><small class="text-muted" style="font-size: 0.75rem;">Instagram</small></div>
                    </div>
                    <div class="col-6 text-center mb-2">
                        <i class="fab fa-linkedin fa-lg text-primary"></i>
                        <div><small class="text-muted" style="font-size: 0.75rem;">LinkedIn</small></div>
                    </div>
                    <div class="col-6 text-center mb-2">
                        <i class="fab fa-whatsapp fa-lg text-success"></i>
                        <div><small class="text-muted" style="font-size: 0.75rem;">WhatsApp</small></div>
                    </div>
                    <div class="col-6 text-center mb-2">
                        <i class="fab fa-youtube fa-lg text-danger"></i>
                        <div><small class="text-muted" style="font-size: 0.75rem;">YouTube</small></div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Info Card -->
        <div class="card card-warning card-outline" style="margin-top: 0.5rem;">
            <div class="card-header" style="padding: 0.5rem 0.75rem;">
                <h3 class="card-title" style="font-size: 1rem;">
                    <i class="fas fa-lightbulb"></i> نصيحة
                </h3>
            </div>
            <div class="card-body" style="padding: 0.75rem;">
                <p class="mb-0" style="font-size: 0.85rem;">
                    <i class="fas fa-check text-success"></i> تأكد من صحة الرابط
                </p>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
