@model UPVC.Models.SocialMedia

@{
    Layout = "~/Views/Admin/Shared/_AdminLayout.cshtml";
    ViewData["Title"] = "تعديل حساب التواصل الاجتماعي";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h2><i class="bi bi-pencil-square me-2"></i>تعديل حساب التواصل الاجتماعي</h2>
        <p class="text-muted">تحديث رابط ومعلومات حساب @Model.Platform</p>
    </div>
    <a asp-action="Index" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-right me-2"></i>رجوع للقائمة
    </a>
</div>

<div class="card shadow-sm">
    <div class="card-body">
        <form asp-action="Edit" asp-route-id="@Model.Id" method="post">
            @Html.AntiForgeryToken()
            
            <!-- Hidden field to preserve Platform value -->
            <input type="hidden" asp-for="Platform" />
            
            <div class="row">
                <div class="col-md-12">
                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-app me-2"></i>المنصة
                        </label>
                        <input type="text" class="form-control" value="@Model.Platform" disabled readonly />
                        <small class="text-muted">لا يمكن تعديل نوع المنصة</small>
                    </div>

                    <div class="mb-3">
                        <label class="form-label fw-bold">
                            <i class="bi bi-link-45deg me-2"></i>الرابط <span class="text-danger">*</span>
                        </label>
                        <input asp-for="Url" type="url" class="form-control" placeholder="https://..." required />
                        <span asp-validation-for="Url" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <!-- Hidden fields to preserve values -->
            <input type="hidden" asp-for="IconClass" />
            <input type="hidden" asp-for="DisplayOrder" />
            <input type="hidden" asp-for="IsActive" />

            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-save me-2"></i>حفظ التغييرات
                </button>
                <a asp-action="Index" class="btn btn-outline-secondary btn-lg">
                    <i class="bi bi-x-circle me-2"></i>إلغاء
                </a>
            </div>
        </form>
    </div>
</div>

<div class="card shadow-sm mt-4">
    <div class="card-header bg-light">
        <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>أمثلة على الأيقونات المتاحة </h5>
    </div>
    <div class="card-body">
        <div class="row g-3">
            <div class="col-md-3">
                <div class="p-2 border rounded text-center">
                    <i class="bi bi-facebook fs-2 text-primary"></i>
                    <div><small><code>bi bi-facebook</code></small></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-2 border rounded text-center">
                    <i class="bi bi-twitter-x fs-2"></i>
                    <div><small><code>bi bi-twitter-x</code></small></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-2 border rounded text-center">
                    <i class="bi bi-instagram fs-2 text-danger"></i>
                    <div><small><code>bi bi-instagram</code></small></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-2 border rounded text-center">
                    <i class="bi bi-linkedin fs-2 text-primary"></i>
                    <div><small><code>bi bi-linkedin</code></small></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-2 border rounded text-center">
                    <i class="bi bi-whatsapp fs-2 text-success"></i>
                    <div><small><code>bi bi-whatsapp</code></small></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-2 border rounded text-center">
                    <i class="bi bi-youtube fs-2 text-danger"></i>
                    <div><small><code>bi bi-youtube</code></small></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-2 border rounded text-center">
                    <i class="bi bi-tiktok fs-2"></i>
                    <div><small><code>bi bi-tiktok</code></small></div>
                </div>
            </div>
            <div class="col-md-3">
                <div class="p-2 border rounded text-center">
                    <i class="bi bi-telegram fs-2 text-info"></i>
                    <div><small><code>bi bi-telegram</code></small></div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
